@model CustomerDetailsViewModel

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Customers Details"];
    var customerDetails = Model.CustomerDetails;
    var customerLedgers = Model.CustomerLedgerDetails;
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                @localizer[""]
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Customers Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">

                                <a asp-action="Index" asp-controller="Customer"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Customers List"]
                                </a>

                                <a asp-action="GetAllLedgers" asp-controller="Customer"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Customers Ledger"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Customer Details"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="container">
                            <div class="box-body">

                                <div class="page-header card">
                                    <div class="card-block">

                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">@localizer["Customer Details"]</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>@localizer["Name"]</h6>
                                                <p>@customerDetails.Name</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>@localizer["Phone"]</h6>
                                                <p>@customerDetails.Phone</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>@localizer["Email"]</h6>
                                                <p>@customerDetails.Email</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-6 col-md-4 col-sm-6">
                                                <h6>@localizer["Address"]</h6>
                                                <p>@customerDetails.Address</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-6 col-md-4 col-sm-6">
                                                <h6>@localizer["Details"]</h6>
                                                <p>@customerDetails.Details</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>@localizer["Created At"]</h6>
                                                <p>@customerDetails.CreatedAt</p>
                                                <hr />
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>@localizer["Last Updated At"]</h6>
                                                <p>@customerDetails.UpdatedAt</p>
                                                <hr />
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>@localizer["Registered By User"]</h6>
                                                <p>@customerDetails.UserName</p>
                                                <hr />
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="page-header card">
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">@localizer["Customer Invoices Details"]</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>@localizer["SNo"]</th>
                                                                    <th>@localizer["Invoice No"]</th>
                                                                    <th>@localizer["Date"]</th>
                                                                    <th>@localizer["Total Amount"]</th>
                                                                    <th>@localizer["Paid"]</th>
                                                                    <th>@localizer["Balance"]</th>
                                                                </tr>
                                                            </thead>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="page-header card">
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">@localizer["Customer Ledger Details"]</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>@localizer["SNo"]</th>
                                                                    <th>@localizer["Date"]</th>
                                                                    <th>@localizer["Description"]</th>
                                                                    <th>@localizer["Debit"]</th>
                                                                    <th>@localizer["Credit"]</th>
                                                                    <th>@localizer["Balance"]</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{
                                                                    decimal totalDebit = 0;
                                                                    decimal totalCredit = 0;
                                                                    decimal totalBalance = 0;
                                                                    string balanceFlg = "+";
                                                                }
                                                                @if (customerLedgers.Any())
                                                                {
                                                                    @foreach (var m in customerLedgers)
                                                                    {
                                                                        <tr>
                                                                            <td>@m.SNo</td>
                                                                            <td>@m.Date</td>
                                                                            <td>@m.Description</td>
                                                                            <td>@m.Debit.ToString("N")</td>
                                                                            <td>@m.Credit.ToString("N")</td>
                                                                            <td>
                                                                                @m.Balance.ToString("N")
                                                                                <span class="d-none">
                                                                                    @{
                                                                                        totalDebit += m.Debit;
                                                                                        totalCredit += m.Credit;
                                                                                    }
                                                                                </span>
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                            <tfoot>
                                                                <tr style="background-color: lightgray;">
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td>@localizer["Total"]</td>
                                                                    <td>@totalDebit.ToString("N")</td>
                                                                    <td>@totalCredit.ToString("N")</td>
                                                                    <td>
                                                                        <span class="d-none">
                                                                            @{
                                                                                totalBalance = totalDebit - totalCredit;
                                                                                if (totalBalance < 0)
                                                                                {
                                                                                    balanceFlg = "-";
                                                                                }
                                                                            }
                                                                        </span>
                                                                        @totalBalance.ToString("N")
                                                                    </td>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*Basic table card end*@
                    </div>
                    @*Page-body end*@

                    <div class="page-header card">
                        <div class="card-block">
                            <ul class="">
                                <li class="breadcrumb-item pull-left">
                                    <a onclick="window.history.back();"
                                       class="text text-danger font-weight-bold" style="cursor: pointer;">
                                        <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>