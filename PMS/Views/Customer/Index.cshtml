@model IEnumerable<CustomerViewModel>
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Customers"];
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        @localizer[""]
                        <h5 class="m-b-10">@localizer["Customers Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="Customer"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-user-plus"></i>@localizer["Add New Customer"]
                                </a>

                                <a asp-action="CreateReceive" asp-controller="Customer"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i>@localizer["Add Receives"]
                                </a>

                                <a asp-action="GetAllLedgers" asp-controller="Customer"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Customers Ledger"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">

                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Customers List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["Name"]</th>
                                            <th>@localizer["Phone"]</th>
                                            <th>@localizer["Address"]</th>
                                            <th>@localizer["Balance"]</th>
                                            <th>@localizer["Ledger"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@m.SNo</td>
                                                    <td>
                                                        <div class="d-inline-block align-middle">
                                                            <div class="d-inline-block">
                                                                <h6 class="m-b-0">@m.Name</h6>
                                                                <p class="m-b-0">@m.Email</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>@m.Phone</td>
                                                    <td>@m.Address</td>
                                                    <td>@m.Balance.ToString("N") </td>
                                                    <td>
                                                        <a asp-action="GetLedgerById" asp-controller="Customer" asp-route-customerId="@m.Id" asp-route-startDate="null" asp-route-endDate="null"
                                                           class="btn btn-info btn-mini">
                                                            <i class="fa fa-file"></i> @localizer["Ledger"]
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="Customer" asp-route-id="@m.Id"
                                                           class="text text-info mr-3">
                                                            <i class="fa fa-eye"></i>
                                                        </a>

                                                        <a asp-action="Edit" asp-controller="Customer" asp-route-id="@m.Id"
                                                           class="text text-primary mr-3">
                                                            <i class="fa fa-edit"></i>
                                                        </a>

                                                        <form style="display: inline;" method="POST" asp-controller="Customer" asp-action="Delete" asp-route-Id="@m.Id"
                                                              onclick="return confirm(@localizer["Are you sure you want to delete this?"])">
                                                            <button type="submit" class="btn btn-link text-danger mr-1"> <i class="fa fa-trash"></i></button>
                                                        </form>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<!-- Main-body end -->