@model CreatePurchaseViewModel

@{
    ViewData["Title"] = "Purchases";
    var Purchase = Model.Purchase;
    var PurchaseDetails = Model.PurchaseDetails;
}

<div id="PlaceHolderHere"></div>
<style>
    #DiscountTextBoxDiv, #FixedAmountTextBoxDiv, #amountlable {
        display: none;
    }
</style>
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Purchases Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">

                                <a asp-action="Index" asp-controller="Product"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-product-hunt"></i> Product List
                                </a>

                                <a asp-action="Index" asp-controller="Supplier"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-user"></i> Supplier List
                                </a>

                                <a asp-action="Index" asp-controller="Purchase"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> Purchases List
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>

                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add a new puchase details</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>

                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 0 auto;">
                                        <form method="post" asp-action="Create" id="frm">
                                            <div class="row">

                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Supplier<span class="required">*</span></label>
                                                        <select class="form-control select2 required" required id="supplierId" style="width: 100%;" asp-for="@Purchase.SupplierId" asp-items="@ViewBag.Suppliers">
                                                            <option value="">--Select Supplier--</option>
                                                        </select>

                                                        <span asp-validation-for="@Purchase.SupplierId" class="text-danger"></span>
                                                        <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action("CreatePartial","Supplier")"
                                                           data-redirect="@Url.Action("Create", "Purchase")" class="text text-info" style="color: white; cursor: pointer;">
                                                            <i class="fa fa-plus-circle"></i> Supplier
                                                        </a>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12 d-none">
                                                    <div class="form-group">
                                                        <label class="control-label">Payment Type <span class="required">*</span></label>
                                                        <select required class="form-control select2" style="width: 100%;" asp-for="@Purchase.PaymentType" id="pType">
                                                            <option value="1" selected="selected">Cash Payment</option>
                                                            <option value="2">Bank Payment</option>
                                                        </select>
                                                        <span asp-validation-for="@Purchase.PaymentType" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12" id="bank" style="display: none;">
                                                    <div class="form-group">
                                                        <label class="control-label">Bank <span class="required">*</span></label>
                                                        <select required class="form-control select2" style="width: 100%;" asp-for="@Purchase.BankId" asp-items="@ViewBag.Banks">
                                                            <option selected="selected" value="0">--Select Bank--</option>
                                                        </select>
                                                        <span asp-validation-for="@Purchase.BankId" class="text-danger"></span>
                                                        <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action("CreateBankModel")"
                                                           data-redirect="@Url.Action("Create", "Purchase")" class="text text-info" style="color: white; cursor: pointer;">
                                                            <i class="fa fa-plus"></i> Add New Bank
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Currency<span class="required">*</span></label>
                                                        <select class="form-control select2 required" required style="width: 100%;" id="CurrencyID" asp-for="@Purchase.PurchaseCurrency" asp-items="Html.GetEnumSelectList<Currency>()">
                                                        </select>
                                                    </div>
                                                </div>


                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Purchase Date <span class="required">*</span> </label>
                                                        <input type="date" asp-for="@Purchase.PurchaseDate" class="form-control" required />
                                                        <span asp-validation-for="@Purchase.PurchaseDate" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Invoice No <span class="required">*</span></label>
                                                        <input asp-for="@Purchase.InvoiceNo" class="form-control" required autocomplete="off" Placeholder="Invoice No" />
                                                        <span asp-validation-for="@Purchase.InvoiceNo" class="text-danger"></span>
                                                    </div>
                                                </div>



                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Description</label>
                                                        <textarea asp-for="@Purchase.Description" class="form-control" placeholder="Details about Purchase..."> </textarea>
                                                        <span asp-validation-for="@Purchase.Description" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-12 table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>
                                                                    <span class="required">
                                                                        <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action("CreatePartial","Product")"
                                                                           data-redirect="@Url.Action("Create", "Purchase")" class="text text-info" style="color: white; cursor: pointer;">
                                                                            <i class="fa fa-plus-circle"></i> Product
                                                                        </a>*
                                                                    </span>
                                                                </th>
                                                                <th>Unit <span class="required">*</span></th>
                                                                <th>Unit Price <span class="required">*</span></th>
                                                                <th>Qty <span class="required">*</span></th>
                                                                <th>Total Price</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="items">
                                                            @if (PurchaseDetails != null)
                                                            {
                                                                foreach (var m in PurchaseDetails)
                                                                {
                                                                    @await Html.PartialAsync("_PurchaseDetailsPartial", m)
                                                                }
                                                            }
                                                        </tbody>

                                                        <tbody>
                                                            @{
                                                                string CurrentName = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;

                                                                var valueDefined = "";


                                                                switch (CurrentName)
                                                                {
                                                                    case "ps":
                                                                        valueDefined = "text text-left";
                                                                        break;

                                                                    case "da":
                                                                        valueDefined = "text text-left";
                                                                        break;

                                                                    default:
                                                                        valueDefined = "text text-right";
                                                                        break;
                                                                }
                                                            }
                                                            <tr>
                                                                <td colspan="4" class="@valueDefined">Sub Total</td>
                                                                <td>
                                                                    <input type="number" step="any" class="form-control" id="total" asp-for="@Purchase.SubTotal" placeholder="0.00" readonly />
                                                                </td>
                                                                <td>
                                                                    <button type="button" class="btn btn-sm btn-primary-outline" id="btnAddItem"><i class="fa fa-plus-circle"></i> Add New</button>
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="4" class="@valueDefined">

                                                                    <div class="form-group">
                                                                        <div id="input-type" class="row float-lg-right">
                                                                            <label for="input-type">Select Discount Type &nbsp;&nbsp; </label>
                                                                            <label class="radio-inline form-check-inline">
                                                                                <input type="radio" name="TextBoxCheck" checked="checked" value="0" onClick="show()" /> By Percentage(%)
                                                                            </label>
                                                                            <label class="radio-inline form-check-inline">
                                                                                <input type="radio" name="TextBoxCheck" value="1" onClick="show()" /> By Fixed Amount
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </td>

                                                                <td>
                                                                    <div id='DiscountTextBoxDiv'>
                                                                        <input type="number" step="any" value="0" id="totalPercentDiscount" oninput="calcDiscount();" class="form-control calc" min="0" max="100" />
                                                                    </div>
                                                                    <div id='FixedAmountTextBoxDiv'>
                                                                        <input step="any" asp-for="@Purchase.DiscountAmount" value="0" id="discount" class="form-control calc" />
                                                                    </div>
                                                                </td>

                                                                <td>
                                                                    <div id="AmountLabelForDiscount"> <p class="text text-info">Amount: <span id="discAmount">0</span></p></div>
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="4" class="@valueDefined">Rent</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Purchase.RentAmount" value="0" id="rent" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>

                                                            <tr class="d-none">
                                                                <td colspan="4" class="@valueDefined">Tax</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Purchase.TaxAmount" value="0" id="tax" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="4" class="@valueDefined">Grand Total</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Purchase.TotalAmount" placeholder="0.00" id="grandtotal" class="form-control" readonly />
                                                                </td>
                                                                <td></td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="4" class="@valueDefined">Paid Amount</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Purchase.PaidAmount" value="0" id="paid" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="4" class="@valueDefined">Due Amount</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Purchase.DueAmount" placeholder="0.00" id="due" class="form-control" readonly />
                                                                </td>
                                                                <td><button type="button" class="btn btn-sm btn-danger-outline text text-danger" onclick="clearAll();"><i class="fa fa-remove"></i> Clear</button></td>
                                                            </tr>

                                                        </tbody>
                                                    </table>
                                                </div>

                                            </div>


                                            <div class="form-group row d-none" id="dvExchange">
                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Exchange Rate <span class="required">*</span></label>
                                                        <input type="text" id="ExchangeRate" asp-for="@Purchase.ExchangeRate" value="0" class="form-control" placeholder="Exchange Rate" />
                                                        <span asp-validation-for="@Purchase.ExchangeRate" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Exchange Amount <span class="required">*</span></label>
                                                        <input type="text" id="ExchangeAmount" asp-for="@Purchase.ExchangeAmount" value="0" class="form-control" readonly placeholder="Exchange Amount" />
                                                        <span asp-validation-for="@Purchase.ExchangeAmount" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12">
                                                    <div class="form-group">

                                                        <div class="form-group">
                                                            <div id="input-type" class="row float-lg-right">
                                                                <label for="input-type">
                                                                    Operation &nbsp; &nbsp;
                                                                </label>
                                                                <label class="radio-inline form-check-inline">
                                                                    <input type="radio" id="rdMultiply" name="rdExchangeOperation" class="md-radiobtn" value="*">  X
                                                                </label>
                                                                <label class="radio-inline form-check-inline">
                                                                    <input type="radio" id="rdDivide" name="rdExchangeOperation" class="md-radiobtn" value="/"> /
                                                                </label>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <input type="hidden" asp-for="@Purchase.PurchaseType" value="0" />
                                                    <input type="hidden" name="sbm_flg" id="sbm_flg" value="0" />

                                                    <button type="button" class="btn btn-sm btn-primary-outline mr-2" onclick="calculate();">
                                                        <i class="fa fa-money"></i> Calculate
                                                    </button>

                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>

                                                    <button type="button" formtarget="_blank" id="sbm_btn" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save & Print
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>

                                                    <button type="button" id="HiddenTriggerForDropDown" hidden onclick="TriggerDropDownList();">
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        document.getElementById('Purchase_PurchaseDate').valueAsDate = new Date();

        $(document).ready(function () {
              $("#items").find("tr").remove();
                $.ajax({
                cache: false,
                url: '@Url.Action("LoadDetails", "Purchase")',
                dataType: "html",
                type: "GET",
                contentType: "application/json",
                success: function (response) {
                    $('#items').append(response);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });

            $("#HiddenTriggerForDropDown").trigger('click');

            $("#CurrencyID").on("change", function () {
                ShowHideExchangeFields();
            });

            $('input[name="rdExchangeOperation"]').on('click', function () {
                setTrAmount($(this).val());
            });
        });

        function setTrAmount(val) {
            if (val == "*") {
                var am = ($("#grandtotal").val());
                var ex = $("#ExchangeRate").val();
                var tra = am * ex;
                $("#ExchangeAmount").val(tra);
            }
            else {
                var am = ($("#grandtotal").val());
                var ex = $("#ExchangeRate").val();
                var tra = am / ex;
                $("#ExchangeAmount").val(tra);
            }
        }

        $("#sbm_btn").on('click', function () {
            $("#sbm_flg").val("1");
            $("#frm").submit();
        });
        var i = 1;
        var sId = 0;

        $("#btnAddItem").click(function () {
            $.ajax({
                cache: false,
                url: '@Url.Action("LoadDetails", "Purchase")',
                dataType: "html",
                type: "GET",
                contentType: "application/json",
                success: function (response) {
                    $('#items').append(response);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });
        });

        //validations
        function calcDiscount() {
            var subtotal = $("#total").val();
            var discper = $("#totalPercentDiscount").val();
            var res = (subtotal * discper) / 100;

            $("#discount").val(res);
            $("#discAmount").text(res);

        }

        function ShowHideExchangeFields() {

            $("#ExchangeRate").val("");

            $("#ExchangeAmount").val("");

            if ($("#CurrencyID").val() != 0 && $("#CurrencyID").val() != "") {
                $("#dvExchange").removeClass("d-none");

            }
            else {
                $("#dvExchange").addClass("d-none");

            }
        }

           function TriggerDropDownList() {
                    $("#supplierId").empty().append('<option selected="selected" value="">--Select Supplier--</option>');

                    $.ajax({
                        type: "POST",
                        cache: false,
                        url: '@Url.Action("GetSupplier", "Purchase")',
                        contentType: "application/json",
                        dataType: "json",
                        success: function (response) {

                            response.forEach(function (item) {
                                $("#supplierId").append($('<option>').val(item['value']).text(item['text']));
                            });
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {

                        }
                    });
           }

        DiscountTextBoxDiv.style.display = 'inline-block';
        AmountLabelForDiscount.style.display = 'inline-block';

        function show() {
            var TextBoxCheck = document.getElementsByName('TextBoxCheck');
            var DiscountTextBoxDiv = document.getElementById("DiscountTextBoxDiv");
            var FixedAmountTextBoxDiv = document.getElementById("FixedAmountTextBoxDiv");
            var AmountLabelForDiscount = document.getElementById("AmountLabelForDiscount");

            if (TextBoxCheck[0].checked) {

                DiscountTextBoxDiv.style.display = 'inline-block';
                AmountLabelForDiscount.style.display = 'inline-block';
                FixedAmountTextBoxDiv.style.display = 'none';
            } else {
                DiscountTextBoxDiv.style.display = 'none';
                AmountLabelForDiscount.style.display = 'none';
                FixedAmountTextBoxDiv.style.display = 'inline-block';
            }
        }
    </script>

    <script src="~/js/purchaseFormValidation.js"></script>
}