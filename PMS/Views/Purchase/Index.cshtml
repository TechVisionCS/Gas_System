@model IEnumerable<PurchaseViewModel>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Purchases"];
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Purchases Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="Purchase"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-shopping-cart"></i> @localizer["Add New Purchase"]
                                </a>

                                <a asp-action="Index" asp-controller="Stock"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-shopping-bag"></i> @localizer["Stock"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Purchases List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["Purchase ID"]</th>
                                            <th>@localizer["Purchase Date"]</th>
                                            <th>@localizer["Invoice No"]</th>
                                            <th>@localizer["Supplier"]</th>
                                            <th>@localizer["Total Amount"]</th>
                                            <th>@localizer["Purchase Details"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }

                                        @if (Model.Any())
                                        {
                                            @foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@m.Id</td>
                                                    @{
                                                        string iDate = m.PurchaseDate;
                                                        DateTime oDate = Convert.ToDateTime(iDate);
                                                    }
                                                    <td>@oDate.Date.ToShortDateString()</td>

                                                    <td>@m.InvoiceNo</td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="Supplier" asp-route-id="@m.SupplierId" class="text text-primary">
                                                            @m.SupplierName
                                                        </a>
                                                    </td>

                                                    <td>@m.TotalAmount.ToString("N")</td>

                                                    <td>
                                                        <span class="d-none">@{var url = "Purchase/ViewPurchaseDetails?id=" + m.Id;}</span>
                                                        <a data-url="@url" data-toggle="modal" data-target="#modal-create-edit-user"
                                                           id="UserModel" class="btn btn-info btn-mini popup" style="color: white;">
                                                            <i class="fa fa-eye"></i> @localizer["Details"]
                                                        </a>
                                                    </td>

                                                    <td>
                                                        <a asp-action="PrintDiv" asp-controller="Purchase" asp-route-id="@m.Id" target="_blank"
                                                           class="text text-info mr-2">
                                                            <i class="fa fa-print"></i>
                                                        </a>

                                                        <a asp-action="Details" asp-controller="Purchase" asp-route-id="@m.Id"
                                                           class="text text-info mr-2">
                                                            <i class="fa fa-eye"></i>
                                                        </a>

                                                        <a asp-action="Edit" asp-controller="Purchase" asp-route-id="@m.Id"
                                                           class="text text-primary mr-2">
                                                            <i class="fa fa-edit"></i>
                                                        </a>

                                                        <a asp-action="Delete" asp-controller="Purchase" asp-route-id="@m.Id"
                                                           class="text text-danger mr-2">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->
<partial name="_Modal" />
@section Scripts{
    <script src="~/js/popupModel.js" asp-append-version="true"></script>
}