@model ViewPurchaseDetailsViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Purchase"];

    var Purchase = Model.purchase;
    var PurchaseDetails = Model.purchaseDetails;
    var shopDetails = Model.ShopModelDetails;
}

@section Styles {
    <style>
        .body {
            text-align: center;
            font-size: 12px;
        }

        #header {
            margin: 0 auto;
        }

        .sno {
            text-align: right;
            font-size: 18px;
            margin-left: 50px;
        }

        table {
            width: 100%;
            direction: rtl;
            text-align: right;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 5px;
        }

        #footer-text {
            font-size: 12px;
            direction: rtl;
        }
    </style>
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Purchase Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Index" asp-controller="Purchase"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Purchases List"]
                                </a>

                                <a asp-action="Create" asp-controller="Purchase"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-shopping-cart"></i> @localizer["Add New Purchase"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-body start -->

                <div class="page-body PrintArea">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Print Invoice"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style" id="DivIdToPrint">
                            <div class="body">
                                <div id="header">
                                    <img src="~/gas-title.png" />
                                </div>
                                <div id="content">
                                    @{
                                        string iDate = Purchase.PurchaseDate;
                                        DateTime oDate = Convert.ToDateTime(iDate);
                                    }
                                    <p class="sno"> <span style="float: right;"><u> @localizer["Bill Number"] : @Purchase.Id</u></span> <span style="float: left;"> @localizer["Date"]  @oDate.Date.ToShortDateString()</span></p><br /><br />

                                    <p class="sno" style="direction: rtl; text-align: right;"><span>@localizer["Supplier Name"] : @Purchase.SupplierName</span> <span style="margin-right: 20px;"> @localizer["Supplier Phone"] : @Purchase.Supplier.Phone</span> <span style="margin-right: 20px;">@localizer["Supplier Address"] : @Purchase.Supplier.Address</span> </p>

                                    <table style="margin-top: 0; padding-top: 0; text-align:right;">

                                        <thead style="text-align: right !important;">
                                            <tr>
                                                <th class="text text-right"> @localizer["SNo"] </th>
                                                <th class="text text-right"> @localizer["Product"] </th>
                                                <th class="text text-right"> @localizer["Unit"] </th>
                                                <th class="text text-right"> @localizer["Purchase Price"] </th>
                                                <th class="text text-right"> @localizer["Qty"] </th>
                                                <th class="text text-right"> @localizer["Total Purchase Price"] </th>
                                            </tr>
                                        </thead>

                                        <tbody style="text-align: right !important;">
                                            @if (PurchaseDetails.Any())
                                            {
                                                foreach (var m in PurchaseDetails)
                                                {
                                                    <tr>
                                                        <td>@m.Sno</td>
                                                        <td>@m.Product.Name</td>
                                                        <td>@m.Unit.Name</td>
                                                        <td>@m.PurchasePrice</td>
                                                        <td>@m.Qty</td>
                                                        <td>@m.TotalPurchasePrice</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>

                                        <tbody>
                                            <tr>
                                                <th colspan="5" class="text text-left"> @localizer["Sub Total"] </th>
                                                <td>
                                                    @Purchase.SubTotal
                                                </td>
                                            </tr>


                                            <tr>
                                                <th colspan="5" class="text text-left"> @localizer["Rent"] </th>
                                                <td>
                                                    @Purchase.RentAmount
                                                </td>

                                            </tr>
                                            <tr>
                                                <th colspan="5" class="text text-left"> @localizer["Discount"] </th>
                                                <td>
                                                    @Purchase.DiscountAmount
                                                </td>
                                            </tr>

                                            <tr>
                                                <th colspan="5" class="text text-left"> @localizer["Total Amount"] </th>
                                                <td>
                                                    @Purchase.TotalAmount
                                                </td>
                                            </tr>

                                            <tr>
                                                <th colspan="5" class="text text-left"> @localizer["Paid Amount"]</th>
                                                <td>
                                                    @Purchase.PaidAmount
                                                </td>

                                            </tr>
                                            <tr>
                                                <th colspan="5" class="text text-left"> @localizer["Due Amount"] </th>
                                                <td>
                                                    @Purchase.DueAmount
                                                </td>

                                            </tr>
                                            <tr>

                                                <th colspan="5" class="text text-left"> @localizer["Currency"] </th>
                                                <td>
                                                    @if (Purchase.CurrecnyId == 1)
                                                    {
                                                        <span class="badge badge-info"> @localizer["AFN"] </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-primary"> @localizer["USD"] </span>
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="6">
                                                    <bold> @localizer["Note"]: </bold> @Purchase.Description
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br>
                                    <p class="sno"> ـــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ @localizer["Signature"] </p>
                                    <hr>
                                    <p><span style="direction: rtl; float: right;"> @localizer["Address"]  @localizer["Arzan Qimat Salim Karwan"] </span> <span style="direction: rtl; float: left;"> : 0774102020 - 0731159741 - 0776785461 @localizer["Phone"] </span></p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 text text-right p-2">
                            <button type="button" id="onClick" class="btn btn-info" style="padding:8px" value='Print' onclick='printDiv("DivIdToPrint");'>@localizer["Print"] </button>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $("#onClick").trigger("click");
        });
    </script>
}