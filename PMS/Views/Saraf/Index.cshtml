@model IEnumerable<SarafViewModel>

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Sarafs"];
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Sarafs Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="CreateOrEdit" asp-controller="Saraf" asp-route-id="0" class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> @localizer["Add New Saraf"]
                                </a>
                                <a asp-action="Transaction" asp-controller="Saraf" class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-plus"></i> @localizer["New Transaction"]
                                </a>
                                <a asp-action="GetAllLedgers" asp-controller="Saraf" class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Sarafs Ledger"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Sarafs List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["Saraf Name"]</th>
                                            <th>@localizer["Account Name"]</th>
                                            <th>@localizer["Account No"]</th>
                                            <th>@localizer["Current Amount"]</th>
                                            <th>@localizer["Action"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }
                                        @if (Model.Any())
                                        {
                                            foreach (var saraf in Model)
                                            {
                                                <tr>
                                                    <td>@sno</td>
                                                    <td>@saraf.SarafName</td>
                                                    <td>@saraf.AccountName</td>
                                                    <td>@saraf.AccountNo</td>
                                                    <td>@saraf.CurrentAmount.ToString("N")</td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="Saraf" asp-route-id="@saraf.Id" class="text text-info mr-2" style="cursor: pointer;">
                                                            <i class="fa fa-eye"></i>
                                                        </a>

                                                        <a asp-action="CreateOrEdit" asp-controller="Saraf" asp-route-id="@saraf.Id" class="text text-primary" style="cursor: pointer;">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @*Basic table card end*@
                </div>
                @*Page-body end*@

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Main-body end*@