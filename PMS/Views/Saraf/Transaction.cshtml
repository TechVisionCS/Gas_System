@model SarafTransaction
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Saraf Transaction"];
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Sarfs Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="CreateOrEdit" asp-controller="Saraf" asp-route-id="0"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> @localizer["Add New Saraf"]
                                </a>
                                <a asp-action="Index" asp-controller="Saraf"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Sarafs List"]
                                </a>
                                <a asp-action="GetAllLedgers" asp-controller="Saraf"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Sarafs Ledger"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>@localizer["Add a new saraf transaction"]</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-6" style="margin: 0 auto;">
                                        <form method="post">
                                            <div class="form-group">
                                                <label class="control-label">@localizer["Date"] <span class="required">*</span></label>
                                                <input type="date" asp-for="Date" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="Date" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">@localizer["Saraf"] <span class="required">*</span></label>
                                                <select class="select2 form-control" asp-for="SarafId" asp-items="@ViewBag.Sarafs" style="width: 100%;" required>
                                                    <option selected="selected" value="0">@localizer["Select Saraf"]</option>
                                                </select>
                                                <span asp-validation-for="SarafId" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">@localizer["Saraf Transaction Type"] <span class="required">*</span></label>
                                                <select class="form-control" asp-for="TransType" style="width: 100%;" required>
                                                    <option selected="selected">@localizer["Select Transaction Type"]</option>
                                                    <option value="0">@localizer["Debit (+)"]</option>
                                                    <option value="1">@localizer["Credit (-)"]</option>
                                                </select>
                                                <span asp-validation-for="TransType" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">@localizer["Saraf Transaction ID"] <span class="required">*</span></label>
                                                <input asp-for="SarafTransactionId" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="SarafTransactionId" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">@localizer["Amount"] <span class="required">*</span></label>
                                                <input type="number" step="any" asp-for="Amount" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">@localizer["Description"] <span class="required">*</span></label>
                                                <textarea asp-for="Description" class="form-control"> </textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-mat btn-success mr-2">
                                                    <i class="fa fa-save"></i> @localizer["Save"]
                                                </button>

                                                <button type="reset" class="btn btn-mat btn-danger">
                                                    <i class="fa fa-times"></i> @localizer["Cancel"]
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@*Main-body end*@