@model Employee
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Employees"];
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Employees Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Index" asp-controller="Employee"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i>@localizer["Employees List"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>@localizer["Update Employee"] <span class="text-behance text-h-primary">(@Model.Name)</span></h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>

                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 0 auto;">
                                        <form method="POST" asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @localizer["Name"] <span class="required">*</span>
                                                        </label>
                                                        <input type="text" asp-for="Name" name="Name" id="Name" class="form-control" required autocomplete="off" dir="auto" autofocus />
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @localizer["Father Name"]<span class="required">*</span>
                                                        </label>
                                                        <input type="text" asp-for="Fathername" name="Fathername" id="Fathername" class="form-control" required autocomplete="off" dir="auto" />
                                                        <span asp-validation-for="Fathername" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @localizer["National Id"]<span class="required">*</span>
                                                        </label>
                                                        <input type="text" asp-for="NationalIdnumber" name="NationalIdnumber" id="NationalIdnumber" class="form-control" autocomplete="off" dir="auto" />
                                                        <span asp-validation-for="NationalIdnumber" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @localizer[""]Base Salary <span class="required">*</span>
                                                        </label>
                                                        <input type="text" asp-for="BaseSalary" name="BaseSalary" min="1" id="BaseSalary" onkeypress="ChangeNumbers1(event, 'BaseSalary');" oninput="ChangeNumbers2(event, 'BaseSalary');" class="form-control" autocomplete="off" />
                                                        <span asp-validation-for="BaseSalary" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="Hiredate" class="control-label">@localizer["Hire Date"]</label>
                                                        <div class="input-group">
                                                            <input type="date" id="Hiredate" name="Hiredate" asp-for="Hiredate" class="form-control" aria-invalid="false" placeholder="yyyy/mm/dd">
                                                            <span asp-validation-for="Hiredate" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label"> @localizer["Phone"]</label>
                                                        <input type="text" asp-for="Phone" class="form-control" required autocomplete="off" max="14" min="10" onkeypress="ChangeNumbers1(event, 'Phone');" oninput="ChangeNumbers2(event, 'Phone');" />
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">@localizer["Designation"]</label>
                                                        <select class="form-control select2 required" required style="width: 100%;" asp-for="DesignationId" asp-items="@ViewBag.Designation">
                                                            <option selected="selected" value="">@localizer["Select Designation"]</option>
                                                        </select>
                                                        <span asp-validation-for="DesignationId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">@localizer["Address"]</label>
                                                        <input type="text" asp-for="Address" class="form-control" dir="auto" />
                                                        <span asp-validation-for="Address" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-8 col-md-8 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @localizer["Image"]
                                                        </label>
                                                        <input type="file" asp-for="ImageFile" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <img src="~/Uploads/employee-profile/@Model.Image" style="width: 150px; height: 200px;" />
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <hr />
                                                <input type="hidden" hidden asp-for="CreatedAt" />
                                                <input type="hidden" hidden asp-for="Id" />
                                                <input type="hidden" hidden asp-for="Image" />
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> @localizer["Update"]
                                                    </button>

                                                    <a asp-action="Index" asp-controller="Employee"
                                                       class="btn btn-mat btn-danger" style="color: white;">
                                                        <i class="fa fa-list"></i>@localizer["Cancel"]
                                                    </a>
                                                </div>
                                            </div>
                                        </form>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>