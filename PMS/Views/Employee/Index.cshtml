@model IEnumerable<EmployeeViewModel>

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Employee"];
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->

                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Employees Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">

                                <a asp-action="EmployeeSalaries" asp-controller="Employee"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-plus"></i>@localizer["Employee Salaries"]
                                </a>

                                <a asp-action="Create" asp-controller="Employee"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-user-plus"></i> @localizer["Add New Employee"]
                                </a>

                                <a asp-action="FiredEmployeeList" asp-controller="Employee"
                                   class="btn btn-mat btn-info mr-2" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Fire/Leave Employe"]
                                </a>

                                <a asp-action="GetAllLedgers" asp-controller="Employee"
                                   class="btn btn-mat btn-info mr-2" style="color: white;">
                                    <i class="fa fa-list"></i>@localizer["Employee Ledger"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Employees List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"]</th>
                                            <th>@localizer["Name"]</th>
                                            <th>@localizer["Image"]</th>
                                            <th>@localizer["Address"]</th>
                                            <th>@localizer["Designation"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@m.SNo</td>
                                                    <td>
                                                        <div class="d-inline-block align-middle">
                                                            <div class="d-inline-block">
                                                                <h6 class="m-b-0">@m.Name</h6>
                                                                <p class="m-b-0">@m.Phone</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <img src="~/Uploads/employee-profile/@m.Image"
                                                             class="rounded-circle"
                                                             height="40" width="40"
                                                             asp-append-version="true" />
                                                    </td>

                                                    <td>@m.Address</td>
                                                    <td>@m.DesignationName</td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="Employee" asp-route-id="@m.Id"
                                                           class="text text-info mr-3">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@m.Id"
                                                           class="text text-primary mr-0">
                                                            <i class="fa fa-edit"></i>
                                                        </a>

                                                        <form style="display: inline;" method="POST" asp-controller="Employee" asp-action="Delete" asp-route-Id="@m.Id"
                                                              onclick="return confirm('@localizer["Are you sure you want to delete this?"]')">
                                                            <button type="submit" class="btn btn-link text-danger mr-0"> <i class="fa fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>

                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->