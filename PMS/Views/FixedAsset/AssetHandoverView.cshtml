@model IEnumerable<AssetHandoverViewModel>

@{
    ViewData["Title"] = "Handover";
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Asset Handover Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">

                                <a asp-action="Create" asp-controller="FixedAsset"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-shopping-cart"></i> Add Asset
                                </a>

                                <a asp-action="AssetHandover" asp-controller="FixedAsset"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-cart-plus"></i> Add Asset Handover
                                </a>

                                <a asp-action="AssetStock" asp-controller="FixedAsset"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Asset Stock
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>Asset Handovers List</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>SNo.</th>
                                            <th>Employee Name</th>
                                            <th>Date</th>
                                            <th>Remarks</th>
                                            <th>RequestId</th>
                                            <th>Details</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }

                                        @if (Model.Any())
                                        {
                                            @foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@sno</td>
                                                    <td>@m.EmployeeName</td>
                                                    <td>@m.HandoverDate</td>
                                                    <td>@m.HandoverRemarks</td>
                                                    <td>@m.HandoverRequestId</td>
                                                    <td>
                                                        <span class="d-none">@{var url = "FixedAsset/ViewAssetHandoverDetails?id=" + m.Id;}</span>
                                                        <a data-url="@url" data-toggle="modal" data-target="#modal-create-edit-user"
                                                           id="UserModel" class="btn btn-info btn-mini popup" style="color: white;">
                                                            <i class="fa fa-eye"></i> Details
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="AssetHandoverDetails" asp-controller="FixedAsset" asp-route-id="@m.Id"
                                                           class="text text-info mr-3">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <a asp-action="AssetHandoverEdit" asp-controller="FixedAsset" asp-route-id="@m.Id"
                                                           class="text text-primary mr-3">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <form style="display: inline;" method="POST" asp-controller="FixedAsset" asp-action="AssetHandoverDelete" asp-route-Id="@m.Id"
                                                              onclick="return confirm('Are you sure you want to delete this?')">
                                                            <button type="submit" class="btn btn-link text-danger"> <i class="fa fa-trash"></i></button>
                                                        </form>

                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>