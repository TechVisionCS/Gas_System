@model IEnumerable<FixedAssetViewModel>

@{
    ViewData["Title"] = "Fixed Assets";
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Fixed Assets Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="FixedAsset"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> Add New Asset
                                </a>
                                <a asp-action="AssetStockAdd" asp-controller="FixedAsset"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-history"></i> Add To Stock
                                </a>
                                <a asp-action="AssetHandover" asp-controller="FixedAsset"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-history"></i> Add Handover
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>Fixed Assets List</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>SNo.</th>
                                            <th>Asset Name</th>
                                            <th>Model</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@m.SNO</td>
                                                    <td>
                                                        <div class="d-inline-block align-middle">
                                                            <div class="d-inline-block">
                                                                <h6 class="m-b-0">@m.AssetTitle</h6><span class="badge badge-info">@m.TotalAvailStockQtys.ToString("N")</span>
                                                                <p class="m-b-0">@m.AssetCategoryName</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>@m.Model</td>
                                                    <td>@m.Description</td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="FixedAsset" asp-route-id="@m.Id"
                                                           class="text text-info mr-3">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-controller="FixedAsset" asp-route-id="@m.Id"
                                                           class="text text-primary mr-3">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <form style="display: inline;" method="POST" asp-controller="FixedAsset" asp-action="Delete" asp-route-Id="@m.Id"
                                                              onclick="return confirm('Are you sure you want to delete this?')">
                                                            <button type="submit" class="btn btn-link text-danger mr-0"> <i class="fa fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->