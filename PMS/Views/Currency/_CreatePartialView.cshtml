@model Currency
<div id="exampleModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text text-white">
                <h5 class="modal-title">Currency Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: white;">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Create" asp-controller="Currency">
                    <div class="form-group">
                        <label>Name <span class="required">*</span></label>
                        <input type="text" asp-for="CurrencyName" class="form-control" required autofocus autocomplete="off" dir="auto" />
                        <span asp-validation-for="CurrencyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>ISO_Code <span class="required">*</span></label>
                        <input type="text" asp-for="CurrencyCode" class="form-control" required autocomplete="off" dir="auto" />
                        <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Symmbol</label>
                        <input type="text" asp-for="CurrencySymbol" class="form-control" autocomplete="off" dir="auto" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>