@model CreateQuoteViewModel

@{
    ViewData["Title"] = "Quote";
    var Quote = Model.Quote;
    var QuoteDetial = Model.QuoteDetails;
}

<div id="PlaceHolderHere"></div>

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Quotes Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create2" asp-controller="Quote"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-cart-plus"></i> Add New Quote (Barcode)
                                </a>

                                <a asp-action="Index" asp-controller="Quote"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> Quotes List
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add a new Quote details</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>

                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 0 auto;">
                                        <form method="post" asp-action="Create" id="frm">
                                            <div class="row">

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Quote No<span class="required">*</span></label>
                                                        <input class="form-control" asp-for="@Quote.InvoiceNo" required value="@ViewBag.InvoiceNo" />
                                                        @*<input class="form-control" disabled value="@ViewBag.InvoiceNo" />*@
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Customer<span class="required">*</span></label>
                                                        <select required class="form-control select2" id="customerId" style="width: 100%;" asp-for="@Quote.CustomerId" asp-items="@ViewBag.Customers">
                                                            <option selected="selected" value="0">WALKING CUSTOMER</option>
                                                        </select>
                                                        <span asp-validation-for="@Quote.CustomerId" class="text-danger"></span>
                                                        <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action("CreateCustomerModel")"
                                                           data-redirect="@Url.Action("Success", "Quote")" class="text text-info" style="color: white; cursor: pointer;" id="btnAddCustomer">
                                                            <i class="fa fa-plus"></i> Add New Customer
                                                        </a>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Payment Type <span class="required">*</span></label>
                                                        <select required class="form-control select2" style="width: 100%;" asp-for="@Quote.PaymentType" id="pType">
                                                            <option value="1" selected="selected">Cash Payment</option>
                                                            <option value="2">Bank Payment</option>
                                                        </select>
                                                        <span asp-validation-for="@Quote.PaymentType" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12" id="bank" style="display: none;">
                                                    <div class="form-group">
                                                        <label class="control-label">Bank <span class="required">*</span></label>
                                                        <select required class="form-control select2" style="width: 100%;" asp-for="@Quote.BankId" asp-items="@ViewBag.Banks">
                                                            <option selected="selected" value="0">--Select Bank--</option>
                                                        </select>
                                                        <span asp-validation-for="@Quote.BankId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Quote Date <span class="required">*</span> </label>
                                                        <input type="date" id="QuoteDate" asp-for="@Quote.QuoteDate" class="form-control" required />
                                                        <span asp-validation-for="@Quote.QuoteDate" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-8 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Status</label>
                                                        <select class="form-control select2" style="width: 100%;" asp-for="@Quote.QuoteStatus" asp-items="Html.GetEnumSelectList<QuoteStatus>()">
                                                        </select>
                                                        <span asp-validation-for="@Quote.QuoteStatus" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-12">
                                                    <h6>Item details</h6>
                                                    <hr />
                                                </div>

                                                <div class="col-12">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Product <span class="required">*</span></th>
                                                                <th>Batch ID <span class="required">*</span></th>
                                                                <th>Qty <span class="required">*</span></th>
                                                                <th>Unit Price <span class="required">*</span></th>
                                                                <th>Discount (%) <small>Per item</small>  <span class="required"></span></th>
                                                                <th>Total Quote Price</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="items">
                                                            @if (Model.QuoteDetails != null)
                                                            {
                                                                foreach (var m in Model.QuoteDetails)
                                                                {
                                                                    @await Html.PartialAsync("_QuoteDetailsPartial", m)
                                                                }

                                                            }
                                                        </tbody>
                                                        <tbody>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Sub Total</td>
                                                                <td>
                                                                    <input type="number" step="any" class="form-control" id="total" asp-for="@Quote.SubTotal" placeholder="0.00" readonly />
                                                                </td>
                                                                <td>
                                                                    <button type="button" class="btn btn-sm btn-primary-outline" id="btnAddItem"><i class="fa fa-plus-circle"></i> Add New</button>
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="5" class="text text-right">Total Discount (%)</td>
                                                                <td>
                                                                    <input type="hidden" step="any" asp-for="@Quote.DiscountAmount" value="0" id="totalDiscount" class="form-control calc" />
                                                                    <input type="number" step="any" value="0" id="totalPercentDiscount" oninput="calcDiscount();" class="form-control calc" min="0" max="100" />
                                                                </td>
                                                                <td>
                                                                    <p class="text text-info">Amount: <span id="discAmount">0</span></p>
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="5" class="text text-right">Rent</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Quote.RentAmount" value="0" id="rent" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Tax</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Quote.TaxAmount" value="0" id="tax" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Grand Total</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Quote.TotalAmount" placeholder="0.00" id="grandtotal" class="form-control" readonly />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Paid Amount</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Quote.PaidAmount" value="0" id="paid" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Due Amount</td>
                                                                <td>
                                                                    <input type="number" step="any" asp-for="@Quote.DueAmount" placeholder="0.00" id="due" class="form-control" readonly />
                                                                </td>
                                                                <td><button type="button" class="btn btn-sm btn-danger-outline text text-danger" onclick="clearAll();"><i class="fa fa-remove"></i> Clear</button></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Description</label>
                                                        <textarea asp-for="@Quote.Description" class="form-control" placeholder="Details about Quote..."> </textarea>
                                                        <span asp-validation-for="@Quote.Description" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <input type="hidden" value="@ViewBag.QuoteDetailsFlg" id="QuoteDetailsFlg" />

                                                    @*<button type="button" class="btn btn-sm btn-primary-outline mr-2" onclick="calculate();"><i class="fa fa-money"></i> Calculate</button>*@
                                                    <input type="hidden" name="sbm_flg" id="sbm_flg" value="0" />
                                                    <button type="button" class="btn btn-sm btn-info-outline text text-info mr-2" onclick="fullPay();"><i class="fa fa-money"></i> Full Paid</button>

                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>
                                                    <button type="button" formtarget="_blank" id="sbm_btn" class="btn btn-mat btn-primary mr-2">
                                                        <i class="fa fa-save"></i> Save & Print
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="~/js/quoteFormValidation.js"></script>
    <script>
        document.getElementById('QuoteDate').valueAsDate = new Date();

          $("#sbm_btn").on('click', function () {
            $("#sbm_flg").val("1");
            $("#frm").submit();
          });

        $("#pType").on('change', function () {
            if ($(this).val() == "2") {
                $("#bank").removeAttr("Style");
            } else {
                $("#bank").addClass("d-none");
            }
        });

        var i = 1;
        var sId = 0;
        var newCreateFlg = $("#QuoteDetailsFlg").val();

        if (newCreateFlg == "0") {
            $(document).ready(function () {
                $("#items").find("tr").remove();
                //sId = $(this).val();
                $.ajax({
                    cache: false,
                    url: '@Url.Action("LoadDetails", "Quote")',
                    dataType: "html",
                    //data: { "supplierId": sId, "i": i },
                    type: "GET",
                    contentType: "application/json",
                    success: function (response) {
                        $('#items').append(response);
                    },
                    error: function (err) {
                        alert(err.responseText);
                    }
                });
            });
        }

        $("#btnAddItem").click(function () {
            i++;
            //sId = $("#supplierId").val();
            $.ajax({
                cache: false,
                url: '@Url.Action("LoadDetails", "Quote")',
                dataType: "html",
                //data: { "supplierId": sId, "i": i },
                type: "GET",
                contentType: "application/json",
                success: function (response) {
                    $('#items').append(response);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });
        });

        if (newCreateFlg == "1") {
            $('.select2').select2();
        }

        function fullPay() {
            var total = $("#grandtotal").val();
            $("#due").val(0);
            $("#paid").val(0);

        }

        function calcDiscount() {
            var subtotal = $("#total").val();
            var discper = $("#totalPercentDiscount").val();

            var res = (subtotal * discper) / 100;

            $("#totalDiscount").val(res);
            $("#discAmount").text(res);

        }
    </script>

}

