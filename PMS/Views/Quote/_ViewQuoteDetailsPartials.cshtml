@model IEnumerable<QuoteDetailsViewModel>
<!--Modal Body Start-->
<div class="modal-content p-2 m-2">
    <!--Modal Header Start-->
    <div class="modal-header">
        <h5 class="modal-title">Quote Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">
                <i class="fa fa-times text text-danger"></i>
            </span>
        </button>
    </div>
    <!--Modal Header End-->
    <!--Modal Content here ...-->
    <div class="table-responsive">
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th>SNo.</th>
                    <th>Product Name</th>
                    <th>Product Batch ID</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Discount</th>
                    <th>Total Quote Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Sno</td>
                            <td>@m.ProductName</td>
                            <td>@m.BatchId</td>
                            <td>@m.Qty</td>
                            <td>@m.UnitPrice</td>
                            <td>
                                @{ var res = (100 * m.Discount) / (m.Discount + m.TotalQuotePrice); }
                                @m.Discount (@res % - <small>Per item</small>)
                            </td>
                            <td>@m.TotalQuotePrice</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!--Modal Contents end-->
</div>
<!--Modal Body End-->
