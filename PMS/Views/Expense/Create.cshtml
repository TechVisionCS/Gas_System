@model Expense
@{
    ViewData["Title"] = "Expenses";
}
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Expenses Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">

                                <a asp-action="Index" asp-controller="ExpenseCategory"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> Expense Category
                                </a>

                                <a asp-action="Index" asp-controller="Expense"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i>  Expenses List
                                </a>

                                <a asp-action="ExpenseStatement" asp-controller="Expense"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-file"></i> Expense Statement
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="card">
                                <div class="card-header">
                                    <h5>Add expense payment details</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-8 col-md-10 col-sm-12" style="margin: 0 auto;">
                                        <form class="form" method="POST" id="frm" enctype="multipart/form-data" asp-action="Create" asp-controller="Expense">

                                            <div class="row">

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Employee <span class="required">*</span></label>
                                                        <select class="select2 form-control required" required style="width: 100%;" asp-for="EmployeeId" asp-items="@ViewBag.Employee">
                                                            <option selected="selected" value="">--Select Employee--</option>
                                                        </select>
                                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                                        <a asp-action="Create" asp-controller="Employee" class="text text-info" style="color: white; cursor: pointer;">
                                                            <i class="fa fa-user"></i> Create Employee
                                                        </a>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Expense Category <span class="required">*</span></label>
                                                        <select class="select2 form-control" required style="width: 100%;" asp-for="ExpenseCategory" asp-items="@ViewBag.ExpenseCategory">
                                                            <option selected="selected" value="">--Select Expense Category--</option>
                                                        </select>
                                                        <span asp-validation-for="ExpenseCategory" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12 d-none">
                                                    <div class="form-group">
                                                        <label class="control-label">Payment Type <span class="required">*</span></label>
                                                        <select required class="form-control select2" style="width: 100%;" asp-for="PaymentType" id="pType">
                                                            <option value="1" selected="selected">Cash Payment</option>
                                                            <option value="2">Bank Payment</option>
                                                        </select>
                                                        <span asp-validation-for="PaymentType" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12" id="bank" style="display: none;">
                                                    <div class="form-group">
                                                        <label class="control-label">Bank <span class="required">*</span></label>
                                                        <select required class="form-control select2" style="width: 100%;" asp-for="BankId" asp-items="@ViewBag.Banks">
                                                            <option selected="selected" value="0">--Select Bank--</option>
                                                        </select>
                                                        <span asp-validation-for="BankId" class="text-danger"></span>
                                                        <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action("CreateBankModel")"
                                                           data-redirect="@Url.Action("Create", "Expense")" class="text text-info" style="color: white; cursor: pointer;">
                                                            <i class="fa fa-plus"></i> Add New Bank
                                                        </a>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Bill Number
                                                        </label>
                                                        <input type="text" step="1" asp-for="BillNumber" class="form-control" required />
                                                        <span asp-validation-for="BillNumber" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Payment Amount <span class="required">*</span>
                                                        </label>
                                                        <input type="number" step="1" min="1" asp-for="Amount" oninput="validity.valid||(value='');" onkeyup="if(this.value<0){this.value= this.value * -1}" class="form-control required" required />
                                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Payment Date <span class="required">*</span> </label>
                                                        <input type="date" asp-for="Date" class="form-control" required />
                                                        <span asp-validation-for="Date" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Description</label>
                                                        <textarea asp-for="Description" class="form-control" dir="auto"> </textarea>
                                                        <span asp-validation-for="Description" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <input type="hidden" name="sbm_flg" id="sbm_flg" value="0" />

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>

                                                    <button type="button" formtarget="_blank" id="sbm_btn" class="btn btn-mat btn-primary mr-2">
                                                        <i class="fa fa-save"></i> Save & Print
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

