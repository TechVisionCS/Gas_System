        document.getElementById('Date').valueAsDate = new Date();

        $("#pType").on('change', function () {
            if ($(this).val() == "2") {
                $("#bank").removeAttr("Style");
            } else {
                $("#bank").addClass("d-none");
            }
        });

        $("#sbm_btn").on('click', function () {

            $("#sbm_flg").val("1");
            $("#frm").submit();
        });
    </script>
}
