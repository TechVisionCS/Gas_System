@model IEnumerable<ExpenseViewModel>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Expenses"];
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        @localizer[""]
                        <h5 class="m-b-10">@localizer["Expenses Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="Expense"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-user-plus"></i>@localizer["Add New Expense"]
                                </a>

                                <a asp-action="ExpenseStatement" asp-controller="Expense"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-file"></i> @localizer["Expense Statement"]
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->

                <div class="page-header card">
                    <div class="card-block">

                        <form method="get" asp-action="ExpensePaymentSearchByCategory">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">@localizer[""]Expense Category</label>
                                        <select class="select2 form-control" name="expenseCategoryId" asp-items="@ViewBag.ExpenseCategory" style="width: 100%;">
                                            <option selected="selected" value="0">@localizer[""]Select Expense Category</option>
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["From"]</label>
                                        <input type="date" name="startDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["To"]</label>
                                        <input type="date" name="endDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12" style="padding-top: 20px;">
                                    <div class="form-group pt-2">
                                        <button type="submit" class="btn btn-primary mr-2"><i class="fa fa-search"></i>@localizer["Search"]</button>
                                        <a asp-action="Index" asp-controller="Expense"
                                           class="btn btn-info mr-2 text text-white"><i class="fa fa-list"></i>@localizer["Show All"]</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Expenses List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"]</th>
                                            <th>@localizer["Date"]</th>
                                            <th>@localizer["Category"]</th>
                                            <th>@localizer["Bill Number"]</th>
                                            <th>@localizer["Amount"]</th>
                                            <th>@localizer["Description"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@m.SNO</td>
                                                    <td>@m.ExpenseDate.ToShortDateString()</td>
                                                    <td>
                                                        @m.ExpenseCategoryName
                                                    </td>
                                                    <td>@m.BillNumber</td>
                                                    <td>@m.Amount.ToString("N")</td>


                                                    <td>@m.Description</td>

                                                    <td>
                                                        <a asp-action="Edit" asp-controller="Expense" asp-route-id="@m.Id"
                                                           class="text text-primary mr-3">
                                                            <i class="fa fa-edit"></i>
                                                        </a>

                                                        <form style="display: inline;" method="POST" asp-controller="Expense" asp-action="Delete" asp-route-Id="@m.Id"
                                                              onclick="return confirm(@localizer["Are you sure you want to delete this?"])">
                                                            <button type="submit" class="btn btn-link text-danger mr-1"> <i class="fa fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->