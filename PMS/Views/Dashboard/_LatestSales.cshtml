@model IEnumerable<SaleViewModel>

@inject IViewLocalizer localizer
<div class="table-responsive">
    <table id="example1" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@localizer["Invoice No"].</th>
                <th>@localizer["Sale Date"]</th>
                <th>@localizer["Customer"]</th>
                <th>@localizer["Total Amount"]</th>
                <th>@localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Id</td>
                        @{
                            string iDate = m.SaleDate;
                            DateTime oDate = Convert.ToDateTime(iDate);
                        }
                        <td>@oDate.Date.ToShortDateString()</td>

                        <td>
                            <a asp-action="Details" asp-controller="Customer" asp-route-id="@m.CustomerId" class="text text-primary">
                                @m.CustomerName
                            </a>
                        </td>

                        <td>@m.TotalAmount.ToString("N")</td>

                        <td>
                            <a asp-action="PrintDiv" asp-controller="Sale" asp-route-id="@m.Id" target="_blank"
                               class="text text-info mr-2">
                                <i class="fa fa-print"></i>
                            </a>

                            <a asp-action="Details" asp-controller="Sale" asp-route-id="@m.Id"
                               class="text text-info mr-2">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>