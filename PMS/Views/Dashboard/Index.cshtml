        var Jan=@ViewBag.JanuarySale;
        var feb=@ViewBag.FaberuarySale;
        var mar=@ViewBag.March;
        var apr=@ViewBag.AprilSale;
        var may=@ViewBag.MaySale ;
        var jun=@ViewBag.JuneSale ;
        var july=@ViewBag.JulySale ;
        var aug=@ViewBag.AugustSale ;
        var sep=@ViewBag.SeptemberSale ;
        var oct=@ViewBag.OctoberSale ;
        var nov =@ViewBag.NovermberSale;
        var dec=@ViewBag.DecemberSale;


        var Janp =@ViewBag.JanuarySalep;
        var febp =@ViewBag.FaberuarySalep;
        var marp =@ViewBag.Marchp;
        var aprp =@ViewBag.AprilSalep;
        var mayp =@ViewBag.MaySalep;
        var junp =@ViewBag.JuneSalep;
        var julyp =@ViewBag.JulySalep;
        var augp =@ViewBag.AugustSalep;
        var sepp =@ViewBag.SeptemberSalep;
        var octp =@ViewBag.OctoberSalep;
        var novp =@ViewBag.NovermberSalep;
        var decp =@ViewBag.DecemberSalep;

        // statustic start

        $(function () {

            var ctx = document.getElementById('Statistics-chart1').getContext("2d");

            var greenline = ctx.createLinearGradient(500, 0, 100, 0);

            greenline.addColorStop(0, '#fd93a8');

            greenline.addColorStop(1, '#FC6180');

            var blueline = ctx.createLinearGradient(500, 0, 100, 0);

            blueline.addColorStop(1, '#56CCF2');

            blueline.addColorStop(0, '#2F80ED');

            //var canvas = document.getElementById('Statistics-chart1')[0];
            //canvas.width = 800;
            //canvas.height = 300;


            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"],
                    datasets: [{
                        label: "Sale",
                        borderColor: blueline,
                        pointBorderColor: blueline,
                        pointBackgroundColor: blueline,
                        pointHoverBackgroundColor: blueline,
                        pointHoverBorderColor: blueline,
                        pointBorderWidth: 10,
                        pointHoverRadius: 10,
                        pointHoverBorderWidth: 1,
                        pointRadius: 0,
                        fill: false,
                        borderWidth: 4,
                        data: [Jan, feb, mar, apr, may, jun, july, aug, sep, oct, nov, dec]
                    },
                    {
                        label: "Purchase",
                        borderColor: greenline,
                        pointBorderColor: greenline,
                        pointBackgroundColor: greenline,
                        pointHoverBackgroundColor: greenline,
                        pointHoverBorderColor: greenline,
                        pointBorderWidth: 10,
                        pointHoverRadius: 10,
                        pointHoverBorderWidth: 1,
                        pointRadius: 0,
                        fill: false,
                        borderWidth: 4,
                        data: [Janp, febp, marp, aprp, mayp, junp, julyp, augp, sepp, octp, novp, decp]
                    }
                    ]
                },
                options: {
                    responsive:true,
                    maintainAspectRatio: false,
                    legend: {
                        position: "top"
                    },
                    tooltips: {
                        enabled: true,
                        intersect: !1,
                        mode: "nearest",
                        xPadding: 10,
                        yPadding: 10,
                        caretPadding: 10
                    },
                    scales: {
                        yAxes: [{
                            ticks: {
                                fontColor: "rgba(0,0,0,0.5)",
                                fontStyle: "bold",
                                beginAtZero: true,
                                maxTicksLimit: 5,
                                padding: 20,
                            },
                            gridLines: {
                                drawTicks: false,
                                display: false
                            }

                        }],
                        xAxes: [{
                            gridLines: {
                                drawTicks: false,
                                display: false
                            },
                            ticks: {
                                padding: 20,
                                fontColor: "rgba(0,0,0,0.5)",
                                fontStyle: "bold"
                            }
                        }]
                    }
                }
            });
        });
    </script>
}