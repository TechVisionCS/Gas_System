@model IEnumerable<ExpensesCategory>
@inject IViewLocalizer localizer
<div class="card-block table-border-style">
    <div class="table-responsive">
        <table id="example1" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>@localizer["SNo"].</th>
                    <th>@localizer["Category Name"]</th>
                    <th>@localizer["Description"]</th>
                    <th>@localizer["Status"]</th>
                    <th>@localizer["Action"]</th>
                </tr>
            </thead>
            <tbody>
                @{ var sno = 1; }
                @if (Model.Any())
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td>@sno</td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                @if (category.Status == 1)
                                {
                                    <span class="badge badge-primary">@localizer["Enabled"]</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">@localizer["Disabled"]</span>
                                }
                            </td>
                            <td>
                                <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action($"Edit/{category.Id}")"
                                   data-redirect="@Url.Action("Success", "ExpenseCategory")" class="text text-primary" style="cursor: pointer;">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <span class="d-none">@{sno++;}</span>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>