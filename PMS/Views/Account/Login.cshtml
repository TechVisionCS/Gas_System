@model LoginViewModel
@{
    Layout = "";
}
@inject IViewLocalizer localizer
@{
    string CurrentName = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
    var valueDefined = "";
    var divlin = "";
    switch (CurrentName)
    {
        case "ps":
            valueDefined = "text text-right";
            divlin = "float-right";
            break;

        case "da":
            valueDefined = "text text-right";
            divlin = "float-right";

            break;

        default:
            divlin = "float-left";
            valueDefined = "text text-left";
            break;
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@localizer["Sign In | TechVision"]</title>
    <style>
        #demotext {
            font-family: roboto;
            font-size: 24px;
            font-weight: 400;
            color: #ffffff;
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Stock Managment System" />
    <meta name="keywords" content="">
    <meta name="author" content="TechVisioncs" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600" rel="stylesheet">
    <!-- Required Fremwork -->
    <link rel="stylesheet" type="text/css" href="~/admin_assets/css/bootstrap/css/bootstrap.min.css">
    <!-- themify-icons line icon -->
    <link rel="stylesheet" type="text/css" href="~/admin_assets/icon/themify-icons/themify-icons.css">
    <!-- ico font -->
    <link rel="stylesheet" type="text/css" href="~/admin_assets/icon/icofont/css/icofont.css">
    <!-- Style.css -->
    <link rel="stylesheet" type="text/css" href="~/admin_assets/css/style.css">
</head>

<body class="fix-menu">
    <!-- Pre-loader start -->
    <div class="theme-loader">
        <div class="loader-track">
            <div class="loader-bar"></div>
        </div>
    </div>
    <!-- Pre-loader end -->

    <section class="login p-fixed d-flex text-center bg-primary common-img-bg">
        <!-- Container-fluid starts -->
        <div class="container  @valueDefined">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Authentication card start -->
                    <div class="login-card card-block auth-body mr-auto ml-auto">

                        <div class="text-center">
                            <div id="demotext">@localizer["Tech Vision"]</div>
                        </div>


                        <div class="auth-box">
                            <form class="md-float-material" method="POST" asp-action="Login" asp-controller="Account">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="@valueDefined txt-primary ">@localizer["Sign In"]</h3>
                                    </div>
                                </div>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger @valueDefined"></div>
                                <div class="input-group">
                                    <input type="email" class="form-control @valueDefined" placeholder="@localizer["Your Email Address"]" asp-for="Email" required autofocus autocomplete="off">
                                    <span class="md-line"></span>
                                </div>
                                <div class="input-group">
                                    <input type="password" class="form-control @valueDefined" placeholder="@localizer["Password"]" required autocomplete="off" asp-for="Password">
                                    <span class="md-line"></span>
                                </div>
                                <div class="row m-t-25 text-left">
                                    <div class="col-sm-7 col-xs-12">
                                        <div class="checkbox-fade fade-in-primary">
                                            <label>
                                                <input type="checkbox" value="" asp-for="RememberMe">
                                                <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                                                <span class="text-inverse">@localizer["Remember me"]</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-xs-12 forgot-phone text-right d-none">
                                        @*  <a href="auth-reset-password.html" class="text-right f-w-600 text-inverse"> @localizer["Forgot Your Password?"]</a>*@
                                    </div>
                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">@localizer["log in"]</button>
                                    </div>
                                </div>
                            </form>

                            <partial name="_Culture" />

                            <hr />
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="text-inverse @valueDefined m-b-0">@localizer["Thank you and enjoy our application"]</p>
                                    <p class="text-inverse @valueDefined"><b>@localizer["Your"] <a href="http://techvision.af/" style="color: cornflowerblue">@localizer["TechVision"]</a> @localizer["Team"]</b></p>
                                </div>
                                <div class="col-md-2">
                                    <img src="~/logo-small-bottom.png" alt="small-logo.png">
                                </div>
                            </div>

                        </div>

                        <!-- end of form -->

                    </div>
                    <!-- Authentication card end -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container-fluid -->
    </section>

    <!-- Required Jquery -->
    <script type="text/javascript" src="~/admin_assets/js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/admin_assets/js/jquery-ui/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/admin_assets/js/popper.js/popper.min.js"></script>
    <script type="text/javascript" src="~/admin_assets/js/bootstrap/js/bootstrap.min.js"></script>
    <!-- jquery slimscroll js -->
    <script type="text/javascript" src="~/admin_assets/js/jquery-slimscroll/jquery.slimscroll.js"></script>
    <!-- modernizr js -->
    <script type="text/javascript" src="~/admin_assets/js/modernizr/modernizr.js"></script>
    <script type="text/javascript" src="~/admin_assets/js/modernizr/css-scrollbars.js"></script>
    <script type="text/javascript" src="~/admin_assets/js/common-pages.js"></script>
</body>
</html>