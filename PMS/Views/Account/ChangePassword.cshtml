@model ChangePasswordViewModel
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Change Account Password"];
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                <!--Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Account Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Index" asp-controller="Dashboard"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-dashboard"></i> @localizer["Dashboard"]
                                </a>

                                <a onclick="event.preventDefault();
                                        document.getElementById('logout-form2244').submit();"
                                   class="btn btn-mat btn-warning" style="color: white; cursor: pointer;">
                                    <i class="fa fa-sign-out"></i>@localizer["Logout"]
                                </a>
                                <form method="post" asp-action="FullLogout" asp-controller="Account" id="logout-form2244" style="display: none;"></form>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>@localizer["Change your account password"]</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-6" style="margin: 0 auto;">
                                        <form method="post">

                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">@localizer["Current Password"]</label>
                                                <div class="col-sm-9">
                                                    <input type="password" class="form-control" asp-for="CurrentPassword"
                                                           placeholder="@localizer["Current Password"]" required autofocus>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">@localizer["New Password"]</label>
                                                <div class="col-sm-9">
                                                    <input type="password" class="form-control" asp-for="NewPassword"
                                                           placeholder="@localizer["New Password"]" required>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">@localizer["Confirm Password"]</label>
                                                <div class="col-sm-9">
                                                    <input type="password" class="form-control" asp-for="ConfirmPassword"
                                                           placeholder="@localizer["Confirm Password"]" required>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-center">
                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> @localizer["Change"]
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> @localizer["Cancel"]
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<!--Main-body end-->
