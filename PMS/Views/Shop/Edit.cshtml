@model Shop
@{
    ViewData["Title"] = "Shop Administration";
}
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Shop Administration</h5>
                    </div>
                </div>

                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>update shop details</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>

                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>

                                    <div class="col-lg-10 col-md-10 col-sm-12" style="margin: 0 auto;">
                                        <form method="post" asp-action="Edit" id="frm" enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Name (en) <span class="required">*</span>
                                                        </label>
                                                        <input asp-for="Name_en" class="form-control" required />
                                                        <span asp-validation-for="Name_en" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Name (ps)
                                                        </label>
                                                        <input asp-for="Name_ps" class="form-control" />
                                                        <span asp-validation-for="Name_ps" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Name (dr)
                                                        </label>
                                                        <input asp-for="Name_dr" class="form-control" />
                                                        <span asp-validation-for="Name_dr" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Phone 1
                                                        </label>
                                                        <input asp-for="Phone1" class="form-control" />
                                                        <span asp-validation-for="Phone1" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Phone 2
                                                        </label>
                                                        <input asp-for="Phone2" class="form-control" />
                                                        <span asp-validation-for="Phone2" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Email 1
                                                        </label>
                                                        <input asp-for="Email1" class="form-control" />
                                                        <span asp-validation-for="Email1" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Email 2
                                                        </label>
                                                        <input asp-for="Email2" class="form-control" />
                                                        <span asp-validation-for="Email2" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Responsible 1
                                                        </label>
                                                        <input asp-for="Responsible1" class="form-control" />
                                                        <span asp-validation-for="Responsible1" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Responsible 2
                                                        </label>
                                                        <input asp-for="Responsible2" class="form-control" />
                                                        <span asp-validation-for="Responsible2" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Address (en)
                                                        </label>
                                                        <input asp-for="Address_en" class="form-control" />
                                                        <span asp-validation-for="Address_en" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Address (ps)
                                                        </label>
                                                        <input asp-for="Address_ps" class="form-control" />
                                                        <span asp-validation-for="Address_ps" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Address (dr)
                                                        </label>
                                                        <input asp-for="Address_dr" class="form-control" />
                                                        <span asp-validation-for="Address_dr" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Slogan (en
                                                        </label>
                                                        <input asp-for="Slog_en" class="form-control" />
                                                        <span asp-validation-for="Slog_en" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Slogan (ps)
                                                        </label>
                                                        <input asp-for="Slog_ps" class="form-control" />
                                                        <span asp-validation-for="Slog_ps" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Slogan (dr)
                                                        </label>
                                                        <input asp-for="Slog_dr" class="form-control" />
                                                        <span asp-validation-for="Slog_dr" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-lg-8 col-md-8 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            Logo <span class="required">*</span>
                                                        </label>
                                                        <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <img src="~/Uploads/@Model.LogoUrl" style="width: 150px; height: 200px;" />
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                    <input type="hidden" asp-for="CreatedAt" />
                                                    <input type="hidden" asp-for="Id" />
                                                    <input type="hidden" asp-for="LogoUrl" />
                                                </div>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

    </script>
}