@model Manufacturer

<div id="exampleModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text text-white">
                <h5 class="modal-title">Manufacturer Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: white;">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Create" asp-controller="Manufacturer">

                    <div class="form-group">
                        <label>Name <span class="required">*</span></label>
                        <input type="text" asp-for="Name" class="form-control" required autofocus />
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" asp-for="Description" class="form-control" dir="auto"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label for="input-type">Status <span class="required">*</span></label>
                            <div id="input-type" class="row">
                                <div class="col-sm-6">
                                    <label class="radio-inline">
                                        <input type="radio" asp-for="Status" class="form-control" value="1" checked="checked" /> Enable
                                    </label>
                                </div>
                                <div class="col-sm-6">
                                    <label class="radio-inline">
                                        <input type="radio" asp-for="Status" class="form-control" value="0" /> Disable
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
