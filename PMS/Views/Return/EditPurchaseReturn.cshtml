@model CreatePurchaseViewModel

@{
    ViewData["Title"] = "Returns";
    var Purchase = Model.Purchase;
    var PurchaseDetails = Model.PurchaseDetails;

    var Return = ViewBag.EditReturn;
    var ReturnDetails = ViewBag.EditReturnDetails;
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Purchase Returns Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="PurchaseReturn" asp-controller="Return"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> Purchase Returns List
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Edit purchase return</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>

                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 0 auto;">
                                        <form method="post" asp-action="EditPurchaseReturn" id="frm">
                                            <div class="row">

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Supplier <span class="required">*</span></label>
                                                        <select required class="form-control" id="supplierId" style="width: 100%;" asp-for="@Purchase.SupplierId" asp-items="@ViewBag.Suppliers" disabled>
                                                            <option selected="selected" value="0">--Select Supplier--</option>
                                                        </select>
                                                        <span asp-validation-for="@Purchase.SupplierId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Payment Type <span class="required">*</span></label>
                                                        <select required class="form-control" style="width: 100%;" asp-for="@Purchase.PaymentType" id="pType" disabled>
                                                            <option selected="selected" value="0">--Select Payment Type--</option>
                                                            <option value="1">Cash Payment</option>
                                                            <option value="2">Bank Payment</option>
                                                        </select>
                                                        <span asp-validation-for="@Purchase.PaymentType" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                @if (Purchase.PaymentType == 2)
                                                {
                                                    <div class="col-lg-4 col-md-4 col-sm-12" id="bank">
                                                        <div class="form-group">
                                                            <label class="control-label">Bank <span class="required">*</span></label>
                                                            <select required class="form-control" style="width: 100%;" asp-for="@Purchase.BankId" asp-items="@ViewBag.Banks" disabled>
                                                                <option selected="selected" value="0">--Select Bank--</option>
                                                            </select>
                                                            <span asp-validation-for="@Purchase.BankId" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                }

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Purchase Date <span class="required">*</span> </label>
                                                        <input type="date" asp-for="@Purchase.PurchaseDate" class="form-control" required disabled />
                                                        <span asp-validation-for="@Purchase.PurchaseDate" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Invoice No <span class="required">*</span></label>
                                                        <input asp-for="@Purchase.InvoiceNo" class="form-control" required autocomplete="off" Placeholder="Invoice No" disabled />
                                                        <span asp-validation-for="@Purchase.InvoiceNo" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Description</label>
                                                        <textarea asp-for="@Purchase.Description" class="form-control" placeholder="Details about Purchase..." disabled> </textarea>
                                                        <span asp-validation-for="@Purchase.Description" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <input type="hidden" name="purchaseId" value="@ViewBag.PurchaseId" />
                                                    <input type="hidden" name="returnId" value="@Return.Id" />
                                                    <hr />
                                                </div>

                                                <div class="col-lg-4 col-md-4 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Return Date <span class="required">*</span> </label>
                                                        @{
                                                            var year = Return.ReturnDate.Date.Year;
                                                            var month = Return.ReturnDate.Date.Month;
                                                            var day = Return.ReturnDate.Date.Day;

                                                            if (day < 10)
                                                            {
                                                                day = 0 + "" + day;
                                                            }

                                                            if (month < 10)
                                                            {
                                                                month = 0 + "" + month;
                                                            }

                                                            var rtnDate = year + "-" + month + "-" + day;

                                                        }
                                                        <input type="date" name="returnDate" id="returnDate" value="@rtnDate" class="form-control" required />
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <hr />
                                                </div>

                                                <div class="col-12">
                                                    <h6>Item details</h6>
                                                    <hr />
                                                </div>

                                                <div class="col-12">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Product</th>
                                                                <th>Unit</th>
                                                                <th>Unit Price</th>
                                                                <th>Returned Qty <span class="required">*</span></th>
                                                                <th>Discount(%)</th>
                                                                <th>Total Price</th>
                                                                <th>Return Check <span class="required">*</span></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="items">
                                                            @if (ReturnDetails != null)
                                                            {
                                                                foreach (var m in ReturnDetails)
                                                                {
                                                                    //@await Html.PartialAsync("_EditPurchaseDetailsPartial", m)
                                                                    <tr id="newItem">
                                                                        <td>
                                                                            <select class="form-control" style="width: 100%;" name="productId" asp-items="@ViewBag.Products" required disabled>
                                                                                @foreach (var p in ViewBag.Products)
                                                                                {
                                                                                    @if (m.ProductId.ToString() == p.Value)
                                                                                    {
                                                                                        <option selected="selected" value="@p.Value">@p.Text</option>
                                                                                    }
                                                                                }
                                                                            </select>
                                                                        </td>
                                                                        <td>
                                                                            <select class="form-control" style="width: 100%;" name="unitId" asp-items="@ViewBag.Units" required disabled>
                                                                                @foreach (var p in ViewBag.Units)
                                                                                {
                                                                                    @if (m.UnitId.ToString() == p.Value)
                                                                                    {
                                                                                        <option selected="selected" value="@p.Value">@p.Text</option>
                                                                                    }
                                                                                }
                                                                            </select>
                                                                        </td>
                                                                        <td>
                                                                            <input type="number" step="any" class="form-control" name="unitPrice" id="unitPrice" value="@m.UnitPrice" placeholder="0.00" readonly />
                                                                        </td>
                                                                        <td>
                                                                            <input type="number" step="any" class="form-control calc" name="returnedQty" id="returnedQty" value="@m.Qty" placeholder="0.00"
                                                                                   oninput="$(this).closest('tr').find('#totalReturnPrice').val( ($(this).closest('tr').find('#unitPrice').val() * $(this).val()) - ((($(this).closest('tr').find('#unitPrice').val() * $(this).val()) * $(this).closest('tr').find('#unitdiscount').val())/100));" />
                                                                        </td>
                                                                        <td>
                                                                            <input type="number" step="any" class="form-control calc" name="discount" id="unitdiscount" value="@m.Discount" placeholder="0.00"
                                                                                   oninput="$(this).closest('tr').find('#totalReturnPrice').val( ($(this).closest('tr').find('#unitPrice').val() * $(this).closest('tr').find('#returnedQty').val()) - ((($(this).closest('tr').find('#unitPrice').val() * $(this).closest('tr').find('#returnedQty').val()) * $(this).val())/100));">
                                                                        </td>
                                                                        <td>
                                                                            <input type="number" step="any" class="form-control total" name="totalReturnPrice" id="totalReturnPrice" value="@m.TotalReturnPrice" placeholder="0.00" readonly required />
                                                                        </td>
                                                                        <td>
                                                                            @if (m.DetailsId == 0)
                                                                            {
                                                                                <button type="button" class="btn btn-sm btn-danger" onclick="$(this).closest('tr').remove();"><i class="fa fa-trash"></i> Delete</button>
                                                                            }
                                                                            else
                                                                            {
                                                                                @if (m.DetailsId > 0)
                                                                                {
                                                                                    <input type="checkbox" class="form-control" name="chkPurchaseDetailsId" value="@m.DetailsId"
                                                                                           style="width: 2.2rem; height: 2.2rem;" checked="checked" />
                                                                                }
                                                                                else
                                                                                {
                                                                                    <input type="checkbox" class="form-control" name="chkPurchaseDetailsId" value="@m.DetailsId"
                                                                                           style="width: 2.2rem; height: 2.2rem;" />
                                                                                }
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                        <tbody>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Sub Total</td>
                                                                <td>
                                                                    <input type="number" step="any" class="form-control" name="subTotal" value="@Return.SubTotal" id="subTotal" placeholder="0.00" readonly />
                                                                </td>
                                                                <td></td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="5" class="text text-right">Total Discount (%)</td>
                                                                <td>
                                                                    <input type="hidden" step="any" name="totalDiscount" id="totalDiscount" class="form-control calc" value="@Return.DiscountAmount" />
                                                                    <input type="number" step="any" value="0" id="totalPercentDiscount" oninput="calcDiscount();" class="form-control calc" min="0" max="100" />
                                                                </td>
                                                                <td>
                                                                    <p class="text text-info">Amount: <span id="discAmount">@Return.DiscountAmount</span></p>
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td colspan="5" class="text text-right">Rent</td>
                                                                <td>
                                                                    <input type="number" step="any" name="rent" id="rent" value="@Return.RentAmount" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Tax</td>
                                                                <td>
                                                                    <input type="number" step="any" name="tax" value="@Return.TaxAmount" id="tax" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Grand Total</td>
                                                                <td>
                                                                    <input type="number" step="any" name="totalAmount" value="@Return.TotalAmount" placeholder="0.00" id="grandtotal" class="form-control" readonly />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Received Amount</td>
                                                                <td>
                                                                    <input type="number" step="any" name="paidAmount" value="@Return.PaidAmount" id="paid" class="form-control calc" />
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text text-right">Balanced Amount</td>
                                                                <td>
                                                                    <input type="number" step="any" name="balancedAmount" value="@Return.DueAmount" placeholder="0.00" id="due" class="form-control" readonly />
                                                                </td>
                                                                <td><button type="button" class="btn btn-sm btn-danger-outline text text-danger d-none" onclick="clearAll();"><i class="fa fa-remove"></i> Clear</button></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Return Notes</label>
                                                        <textarea name="returnNote" class="form-control" placeholder="Enter return notes...">@Return.Description</textarea>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <button type="button" class="btn btn-sm btn-primary-outline mr-2" onclick="calculate();">
                                                        <i class="fa fa-money"></i> Calculate
                                                    </button>

                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/purchaseReturnFormValidation.js"></script>

    <script>

        $(document).ready(function () {
            $("#totalPercentDiscount").val((100 * $("#totalDiscount").val()) / $("#subTotal").val());
        });

        $("#pType").on('change', function () {
            if ($(this).val() == "2") {
                $("#bank").removeAttr("Style");
            } else {
                $("#bank").addClass("d-none");
            }
        });

        var i = 1;
        var sId = 0;
        $("#supplierId").on("change", function () {
            $("#items").find("tr").remove();
                sId = $(this).val();
                $.ajax({
                cache: false,
                url: '@Url.Action("LoadDetails", "Purchase")',
                dataType: "html",
                data: { "supplierId": sId, "i": i },
                type: "GET",
                contentType: "application/json",
                success: function (response) {
                    $('#items').append(response);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });
        });

        $("#btnAddItem").click(function () {
            i++;
            sId = $("#supplierId").val();
            $.ajax({
                cache: false,
                url: '@Url.Action("LoadDetails", "Purchase")',
                dataType: "html",
                data: { "supplierId": sId, "i": i },
                type: "GET",
                contentType: "application/json",
                success: function (response) {
                    $('#items').append(response);
                },
                error: function (err) {
                    alert(err.responseText);
                }
            });
        });

        //validations
        function calcDiscount() {
            var subtotal = $("#subTotal").val();
            var discper = $("#totalPercentDiscount").val();

            var res = (subtotal * discper) / 100;

            $("#totalDiscount").val(res);
            $("#discAmount").text(res);

        }
    </script>
}