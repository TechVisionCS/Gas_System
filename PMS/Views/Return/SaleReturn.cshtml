@model IEnumerable<ReturnModelViewModel>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Returns"];
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Sale Returns Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Index" asp-controller="Return"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> @localizer["Add New Return"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Page-header end -->
                <div class="page-header card">
                    <div class="card-block">
                        <form method="get" asp-action="SaleReturnByDate">
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["From"]</label>
                                        <input type="date" name="startDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["To"]</label>
                                        <input type="date" name="endDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12" style="padding-top: 20px;">
                                    <div class="form-group pt-2">
                                        <button type="submit" class="btn btn-primary mr-2"><i class="fa fa-search"></i> @localizer["Search"]</button>
                                        <a asp-action="SaleReturn" asp-controller="Return"
                                           class="btn btn-info mr-2 text text-white"><i class="fa fa-list"></i> @localizer["Show All"]</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Sale Returns List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["Date"]</th>
                                            <th>@localizer["Sale ID"] <small>(@localizer["Invoice #"])</small></th>
                                            <th>@localizer["Customer"]</th>
                                            <th>@localizer["Amount"]</th>
                                            <th>@localizer["Description"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1;}
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@sno @{sno++;}</td>
                                                    <td>@m.ReturnDate</td>
                                                    <td>@m.InvoiceNo</td>
                                                    <td>@m.CustomerName</td>
                                                    <td>@m.TotalAmount.ToString("N")</td>
                                                    <td>@m.Description</td>
                                                    <td>
                                                        <a asp-action="" asp-controller="Return" asp-route-id="@m.Id"
                                                           class="text text-info mr-3">
                                                            <i class="fa fa-print"></i>
                                                        </a>

                                                        <a asp-action="DetailsSaleReturn" asp-controller="Return" asp-route-id="@m.Id"
                                                           class="text text-info mr-2">
                                                            <i class="fa fa-eye"></i>
                                                        </a>

                                                        @if (m.SaleId == 0)
                                                        {
                                                            <a asp-action="EditSaleReturn2" asp-controller="Return" asp-route-returnId="@m.Id"
                                                               class="text text-primary mr-2">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a asp-action="EditSaleReturn" asp-controller="Return" asp-route-returnId="@m.Id" asp-route-saleId="@m.SaleId"
                                                               class="text text-primary mr-2">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        }

                                                        <a asp-action="DeleteSaleReturn" asp-controller="Return" asp-route-id="@m.Id"
                                                           class="text text-danger mr-2">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="text text-center">
                                                <td colspan="7">@localizer["No item available!"]</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->