@model IEnumerable<ProductUnit>
<!--Modal Body Start-->
<div class="modal-content p-2 m-2">
    <!--Modal Header Start-->
    <div class="modal-header">
        <h5 class="modal-title">Product Unit Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">
                <i class="fa fa-times text text-danger"></i>
            </span>
        </button>
    </div>
    <!--Modal Header End-->
    <!--Modal Content here ...-->
    <div class="table-responsive">
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th>Unit ID</th>
                    <th>Unit Name</th>
                    <th>Unit Sell Price</th>
                    <th>Edit Sell Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Unit.Id</td>
                            <td>@m.Unit.Name</td>
                            <td>@m.UnitSellPrice</td>
                            <td>
                                <a class="btn btn-info btn-mini"
                                   asp-action="EditSellPrice" asp-controller="Product" asp-route-pid="@m.ProductId" asp-route-uid="@m.Unit.Id">
                                    <i class="fa fa-edit"></i> Edit Sell Price
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!--Modal Contents end-->
</div>
<!--Modal Body End-->
