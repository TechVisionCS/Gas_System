@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "Products";
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Products Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="Product"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-plus"></i> Add New Product
                                </a>

                                <a asp-action="Index" asp-controller="Stock"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-shopping-bag"></i> Stock
                                </a>
                                <a asp-action="Index" asp-controller="Unit"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Manage Units
                                </a>

                                <a asp-action="Index" asp-controller="Category"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Manage Cateogory
                                </a>

                                <a asp-action="Index" asp-controller="Manufacturer"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Manage Manufecturer
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Page-header end -->
                <!-- Page-body start -->

                <div class="page-body">

                    <div class="card">
                        <div class="card-header">
                            <h5>Products List</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>SNo.</th>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Manufacturer</th>
                                            <th>Unit Details</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Any())
                                        {
                                            @foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@m.SNo</td>
                                                    <td>@m.Name</td>
                                                    <td>
                                                        <a asp-action="ProductsByCategory" asp-controller="Product" asp-route-category="@m.CategoryId" class="text text-primary">
                                                            @m.CategoryName
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="ProductsByManufacturer" asp-controller="Product" asp-route-manu="@m.ManufacturerId" class="text text-primary">
                                                            @m.ManufacturerName
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <span class="d-none">@{var url1 = "Product/UnitDetails?id=" + m.Id;}</span>
                                                        <a data-url="@url1" data-toggle="modal" data-target="#modal-create-edit-user"
                                                           id="UserModel" class="btn btn-info btn-mini popup" style="color: white;">
                                                            <i class="fa fa-eye"></i> Unit Details
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="Product" asp-route-id="@m.Id"
                                                           class="text text-info mr-2">
                                                            <i class="fa fa-eye"></i>
                                                        </a>

                                                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@m.Id"
                                                           class="text text-primary mr-2">
                                                            <i class="fa fa-edit"></i>
                                                        </a>


                                                        <form style="display: inline;" method="POST" asp-controller="Product" asp-action="Delete" asp-route-Id="@m.Id"
                                                              onclick="return confirm('Are you sure you want to delete this?')">
                                                            <button type="submit" class="btn btn-link text-danger mr-0"> <i class="fa fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<!-- Main-body end -->
<partial name="_Modal" />
@section Scripts{
    <script src="~/js/popupModel.js" asp-append-version="true"></script>
}