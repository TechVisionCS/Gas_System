@model Category
@inject IViewLocalizer localizerp

<div id="exampleModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text text-white">
                <h5 class="modal-title">@localizerp["Category Details"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: white;">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Edit" asp-controller="Category">
                    <div class="form-group">
                        <label>@localizerp["Name"] :</label>
                        <input type="text" asp-for="Name" class="form-control" required autofocus autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>@localizerp["Description"] :</label>
                        <textarea type="text" asp-for="Description" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <label for="input-type">@localizerp["Status"]<span class="required">*</span></label>
                            <div id="input-type" class="row">
                                <div class="col-sm-6">
                                    <label class="radio-inline">
                                        <input type="radio" asp-for="Status" class="form-control" value="1" checked="checked" /> @localizerp["Enable"]
                                    </label>
                                </div>
                                <div class="col-sm-6">
                                    <label class="radio-inline">
                                        <input type="radio" asp-for="Status" class="form-control" value="0" /> @localizerp["Disable"]
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <button type="button" class="btn btn-primary" data-save="modal">@localizerp["Update"]</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@localizerp["Close"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('input').attr('autocomplete', 'off');
</script>