@model IEnumerable<SaleDetailsViewModel>
@inject IViewLocalizer localizer
<!--Modal Body Start-->
<div class="modal-content ">
    <!--Modal Header Start-->
    <div class="modal-header">
        <h5 class="modal-title">@localizer["Sale Details"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">
                <i class="fa fa-times text text-danger"></i>
            </span>
        </button>
    </div>
    <!--Modal Header End-->
    <!--Modal Content here ...-->
    <div class="table-responsive">
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th>@localizer["SNo"].</th>
                    <th>@localizer["Product"]</th>
                    <th>@localizer["Unit"]</th>
                    <th>@localizer["Unit Price"]</th>
                    <th>@localizer["Qty"]</th>
                    <th class="d-none">@localizer["Discount"]</th>
                    <th>@localizer["Total Price"]</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Sno</td>
                            <td>@m.Product.Name</td>
                            <td>@m.Unit.Name</td>
                            <td>@m.UnitPrice</td>
                            <td>@m.Qty</td>
                            <td class="d-none">
                                @{ var res = (100 * m.Discount) / (m.Discount + m.TotalSalePrice); }
                                @m.Discount (@res % - <small>@localizer["Per item"]</small>)
                            </td>
                            <td>@m.TotalSalePrice</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!--Modal Contents end-->
</div>
<!--Modal Body End-->