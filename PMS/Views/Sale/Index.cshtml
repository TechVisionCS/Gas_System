@model IEnumerable<SaleViewModel>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Sales"];
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        @localizer[""]
                        <h5 class="m-b-10">@localizer["Sales Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="Sale"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-shopping-cart"></i> @localizer["Add New Sale"]
                                </a>
                                <a asp-action="Index" asp-controller="Stock"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-shopping-bag"></i> @localizer["Stock"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Page-header end -->
                <!-- Page-body start -->

                <div class="page-body">

                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Sales List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["Invoice No"].</th>
                                            <th>@localizer["Sale Date"]</th>
                                            <th>@localizer["Customer"]</th>
                                            <th>@localizer["Sale Type"]</th>
                                            <th>@localizer["Total Amount"]</th>
                                            <th>@localizer["Sale Details"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }

                                        @if (Model.Any())
                                        {
                                            @foreach (var m in Model)
                                            {

                                                <tr>
                                                    <td>@sno</td>
                                                    <td>@m.Id</td>
                                                    @{
                                                        string iDate = m.SaleDate;
                                                        DateTime oDate = Convert.ToDateTime(iDate);
                                                    }
                                                    <td>@oDate.Date.ToShortDateString()</td>
                                                    <td>
                                                        <a asp-action="Details" asp-controller="Customer" asp-route-id="@m.CustomerId" class="text text-primary">
                                                            @m.CustomerName
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @if (m.SaleType == 1)
                                                        {
                                                            <a asp-action="SaleBySaleType" asp-controller="Sale" asp-route-saletype="@m.SaleType" class="text text-primary">
                                                                <span class="badge badge-primary">@localizer["WholeSale"]</span>
                                                            </a>

                                                        }
                                                        else if (m.SaleType == 2)
                                                        {
                                                            <a asp-action="SaleBySaleType" asp-controller="Sale" asp-route-saletype="@m.SaleType" class="text text-primary">
                                                                <span class="badge badge-info">@localizer["Retailsale"]</span>
                                                            </a>

                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning">@localizer["None"]</span>
                                                        }
                                                    </td>
                                                    <td>@m.TotalAmount.ToString("N")</td>
                                                    <td>
                                                        <span class="d-none">@{var url = "Sale/ViewSaleDetails?id=" + m.Id;}</span>
                                                        <a data-url="@url" data-toggle="modal" data-target="#modal-create-edit-user"
                                                           id="UserModel" class="btn btn-info btn-mini popup" style="color: white;">
                                                            <i class="fa fa-eye"></i> @localizer["Details"]
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="PrintDiv" asp-controller="Sale" asp-route-id="@m.Id" target="_blank"
                                                           class="text text-info mr-2">
                                                            <i class="fa fa-print"></i>
                                                        </a>

                                                        <a asp-action="Details" asp-controller="Sale" asp-route-id="@m.Id"
                                                           class="text text-info mr-2">
                                                            <i class="fa fa-eye"></i>
                                                        </a>

                                                        <a asp-action="Edit" asp-controller="Sale" asp-route-id="@m.Id"
                                                           class="text text-primary mr-2">
                                                            <i class="fa fa-edit"></i>
                                                        </a>

                                                        <a asp-action="Delete" asp-controller="Sale" asp-route-id="@m.Id"
                                                           class="text text-danger mr-2">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->

<partial name="_Modal" />
@section Scripts{
    <script src="~/js/popupModel.js" asp-append-version="true"></script>
}