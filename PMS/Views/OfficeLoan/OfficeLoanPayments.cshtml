@model IEnumerable<OfficeLoanPayment>

@{
    ViewData["Title"] = "Office Loan's Payments";
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">office Loans Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="CreatePayment" asp-controller="OfficeLoan"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> Add New Payment
                                </a>

                                <a asp-action="Index" asp-controller="OfficeLoan"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Persons List
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <div class="page-header card">
                    <div class="card-block">

                        <form method="get" asp-action="Payments_to_officeLoan" asp-controller="OfficeLoan">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Person</label>
                                        <select class="select2 form-control" name="personId" asp-items="@ViewBag.Persons" style="width: 100%;">
                                            <option selected="selected" value="0">--Select Person--</option>
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">From</label>
                                        <input type="date" name="startDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">To</label>
                                        <input type="date" name="endDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12" style="padding-top: 20px;">
                                    <div class="form-group pt-2">
                                        <button type="submit" class="btn btn-primary mr-2"><i class="fa fa-search"></i> Search</button>
                                        <a asp-action="OfficeLoanPayments" asp-controller="OfficeLoan"
                                           class="btn btn-info mr-2 text text-white"><i class="fa fa-list"></i> Show All</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>Office Loan Payments Details</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>SNo.</th>
                                            <th>Person Name</th>
                                            <th>Payment Date</th>
                                            <th>Payment Type</th>
                                            <th>Bank Name</th>
                                            <th>Payment Amount</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@sno @{sno++;} </td>
                                                    <td>@m.PersonName</td>
                                                    <td>@m.Date</td>
                                                    <td>
                                                        @if (m.PaymentType == 0)
                                                        {
                                                            <span class="badge badge-info">Cash</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-info">Bank</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @m.BankName
                                                    </td>
                                                    <td>@m.Amount.ToString("N")</td>
                                                    <td>@m.Desciption</td>
                                                    <td>
                                                        <a asp-action="EditPayment" asp-controller="OfficeLoan" asp-route-id="@m.Id"
                                                           class="text text-primary mr-3">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->