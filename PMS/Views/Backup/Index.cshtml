@model List<FileList>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Backup"];
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Backup Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="BackupDatabase" asp-controller="Backup"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-database"></i> @localizer["New Backup"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Page-header end -->
                <!-- Page-body start -->

                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Backup List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["File Name"]</th>
                                            <th>@localizer["Restore"]</th>
                                            <th>@localizer["Download"]</th>
                                            <th>@localizer["Delete"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }

                                        @if (Model.Any())
                                        {
                                            @foreach (FileList file in Model)
                                            {
                                                <tr>
                                                    <td>@sno</td>
                                                    <td>@file.FileName</td>
                                                    <td>
                                                        @Html.ActionLink("Restore", "RestoreDatabase", new { fileName = file.FileName }, new { @class = "text text-danger" })
                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                    <td> @Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName })</td>
                                                    <td> @Html.ActionLink("Delete", "DeleteFile", new { fileName = file.FileName }, new { @class = "text text-danger" })</td>

                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i>@localizer[""] Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>