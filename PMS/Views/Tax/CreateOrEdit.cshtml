@model Tax

@{
    ViewData["Title"] = "Manage Tax Details";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Users Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Index" asp-controller="Tax"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> Taxes List
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add a new tax</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-6" style="margin: 0 auto;">
                                        <form method="post">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Tax Name</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" asp-for="Name"
                                                           placeholder="Enter Tax Name" required autofocus>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Tax Amount (%)</label>
                                                <div class="col-sm-9">
                                                    <input type="number" step="any" class="form-control" asp-for="Amount"
                                                           placeholder="Enter Tax amount by percentage (%)" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Tax Status</label>
                                                <div class="col-sm-4 d-flex">
                                                    Enable: <input type="radio" class="form-control ml-1" asp-for="Status" value="1" checked="checked">
                                                </div>
                                                <br />
                                                <div class="col-sm-4 d-flex">
                                                    Disable: <input type="radio" class="form-control ml-1" asp-for="Status" value="0">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-center">
                                                    <input type="hidden" value="@ViewBag.flag" name="flag" />
                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> Save
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@*Main-body end*@