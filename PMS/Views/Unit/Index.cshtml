@model IEnumerable<Unit>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Manage GAS Units"];
}
<div id="PlaceHolderHere"></div>
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["GAS Units Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action("Create")"
                                   data-redirect="@Url.Action("Success", "Unit")" class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> @localizer["Add New Unit"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">

                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Units List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["Unit Name"]</th>
                                            <th>@localizer["Amount in Kg"]</th>
                                            <th>@localizer["Description"]</th>
                                            <th>@localizer["Status"]</th>
                                            <th>@localizer["Action"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{ var sno = 1; }
                                        @if (Model.Any())
                                        {
                                            foreach (var unit in Model)
                                            {
                                                <tr>
                                                    <td>@sno</td>
                                                    <td>@unit.Name</td>
                                                    <td>@unit.KgAmount.ToString("N")</td>
                                                    <td style="word-wrap: break-word; white-space: pre-wrap;" class="text-wrap">@unit.Description</td>
                                                    <td>
                                                        @if (unit.Status == 1)
                                                        {
                                                            <span class="badge badge-primary">@localizer["Enabled"]</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning">@localizer["Disabled"]</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a data-toggle="ajax-modal" data-target="#exampleModal" data-url="@Url.Action($"Edit/{unit.Id}")"
                                                           data-redirect="@Url.Action("Success", "Unit")" class="text text-primary" style="cursor: pointer;">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @*Basic table card end*@

                </div>
                @*Page-body end*@

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Main-body end*@