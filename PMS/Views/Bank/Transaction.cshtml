@model BankTransaction

@{
    ViewData["Title"] = "Bank Transaction";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Banks Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="CreateOrEdit" asp-controller="Bank" asp-route-id="0" 
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> Add New Bank
                                </a>
                                <a asp-action="Index" asp-controller="Bank"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> Banks List
                                </a>
                                <a asp-action="GetAllLedgers" asp-controller="Bank"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Banks Ledger
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->

                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add a new bank transaction</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-6" style="margin: 0 auto;">
                                        <form method="post">
                                            <div class="form-group">
                                                <label class="control-label">Date <span class="required">*</span></label>
                                                <input type="date" asp-for="Date" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="Date" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Bank <span class="required">*</span></label>
                                                <select class="select2 form-control" asp-for="BankId" asp-items="@ViewBag.Banks" style="width: 100%;" required>
                                                    <option selected="selected" value="0">--Select Bank--</option>
                                                </select>
                                                <span asp-validation-for="BankId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Bank Transaction Type <span class="required">*</span></label>
                                                <select class="form-control" asp-for="TransType" style="width: 100%;" required>
                                                    <option selected="selected">--Select Transaction Type--</option>
                                                    <option value="0">Debit (+)</option>
                                                    <option value="1">Credit (-)</option>
                                                </select>
                                                <span asp-validation-for="TransType" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Bank Transaction ID <span class="required">*</span></label>
                                                <input asp-for="BankTransactionId" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="BankTransactionId" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Amount <span class="required">*</span></label>
                                                <input type="number" step="any" asp-for="Amount" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Description <span class="required">*</span></label>
                                                <textarea asp-for="Description" class="form-control"> </textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-mat btn-success mr-2">
                                                    <i class="fa fa-save"></i> Save
                                                </button>

                                                <button type="reset" class="btn btn-mat btn-danger">
                                                    <i class="fa fa-times"></i> Cancel
                                                </button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@*Main-body end*@

