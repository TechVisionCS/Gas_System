@model PMS.Models.Bank

@{
    ViewData["Title"] = "Banks";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Banks Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Transaction" asp-controller="Bank" class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-plus"></i> New Transaction
                                </a>
                                <a asp-action="Index" asp-controller="Bank"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i> Banks List
                                </a>
                                <a asp-action="GetAllLedgers" asp-controller="Bank"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Banks Ledger
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add a new bank</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-6" style="margin: 0 auto;">
                                        <form method="post">
                                            <div class="form-group">
                                                <label class="control-label">Bank Name <span class="required">*</span></label>
                                                <input asp-for="BankName" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="BankName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Bank Account Name <span class="required">*</span></label>
                                                <input asp-for="AccountName" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="AccountName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Account No <span class="required">*</span></label>
                                                <input asp-for="AccountNo" class="form-control" autocomplete="off" required />
                                                <span asp-validation-for="AccountNo" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Branch</label>
                                                <input asp-for="Branch" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="Branch" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Description</label>
                                                <textarea asp-for="Description" class="form-control"> </textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <input type="hidden" value="@ViewBag.flag" name="flag" />
                                                <button type="submit" class="btn btn-mat btn-success mr-2">
                                                    <i class="fa fa-save"></i> Save
                                                </button>

                                                <button type="reset" class="btn btn-mat btn-danger">
                                                    <i class="fa fa-times"></i> Cancel
                                                </button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@*Main-body end*@

