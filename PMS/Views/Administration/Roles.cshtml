@model IEnumerable<IdentityRole>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["User Roles List"];
}
<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        @localizer[""]
        <div class="row">
            <div class="col-lg-9" style="margin:0 auto;">
                @*Page-header start*@
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10"> @localizer["User Roles Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="CreateRole" asp-controller="Administration"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i>  @localizer["Add New Role"]
                                </a>

                                <a asp-action="Register" asp-controller="Account"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-user-plus"></i>  @localizer["Add New User"]
                                </a>

                                <a asp-action="Users" asp-controller="Administration"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i>  @localizer["Users List"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["User Roles List"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">

                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo."]</th>
                                            <th>@localizer["Role Name"]</th>
                                            <th>@localizer["Users"]</th>
                                            <th>@localizer["Action"]</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{ var sno = 1; }
                                        @if (Model.Any())
                                        {
                                            foreach (var role in Model)
                                            {
                                                <tr>
                                                    <td>@sno</td>
                                                    <td>@role.Name</td>
                                                    <td>
                                                        <a asp-action="EditUsersInRole" asp-controller="Administration"
                                                           asp-route-roleId="@role.Id" class="text text-info">
                                                            <i class="fa fa-users"></i> @localizer["Users"]
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id"
                                                           class="text text-primary mr-2">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <span class="d-none">@{sno++;}</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @*Basic table card end*@
                </div>
                @*Page-body end*@

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Main-body end*@