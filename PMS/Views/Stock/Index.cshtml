@model IEnumerable<CurrentStockViewModel>

@{
    ViewData["Title"] = "Stock";
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->

                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Current Stock Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="StockDetails" asp-controller="Stock"
                                   class="btn btn-mat btn-primary mr-2" style="color: white;">
                                    <i class="fa fa-list"></i> Stock Details
                                </a>

                                <a asp-action="Index" asp-controller="Product"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Products List
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Page-header end -->

                <div class="page-header card">
                    <div class="card-block">

                        <form method="get" asp-action="Index">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Change Unit</label>
                                        <select class="form-control" name="unitId" asp-items="@ViewBag.Units" style="width: 100%;">
                                            <option selected="selected" value="0">--Select Unit--</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12" style="padding-top: 20px;">
                                    <div class="form-group pt-2">
                                        <button type="submit" class="btn btn-outline-primary mr-2"><i class="fa fa-search"></i> Search</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Page-body start -->

                <div class="page-body">

                    <div class="card">
                        <div class="card-header">
                            <h5>Stock Products List</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>SNo.</th>
                                            <th>Product Name</th>
                                            <th>Manufacturer</th>
                                            <th>Category</th>
                                            @*<th>Type</th>
                                                <th>Model</th>*@
                                            @*<th>Unit</th>*@
                                            @*<th>Total In Qty (@ViewBag.UnitName)</th>
                                                <th>Total Out Qty (@ViewBag.UnitName)</th>*@
                                            <th style="background-color: lightgray;">Current Stock Qty (@ViewBag.UnitName)</th>
                                            @*<th>Stock Purchased Price</th>
                                                <th>Stock Sales Price</th>*@
                                            <th>View Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var sno = 1;
                                            decimal purchasePriceTotal = 0;
                                            decimal salePriceTotla = 0;
                                        }

                                        @if (Model.Any())
                                        {
                                            @foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@sno  @{sno++;}</td>
                                                    <td>@m.ProductName</td>
                                                    <td>
                                                        <a asp-action="GetByManufacturerId" asp-controller="Stock" asp-route-id="@m.ManufacturerId" class="text text-primary">
                                                            @m.ManufacturerName
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="GetByCategoryId" asp-controller="Stock" asp-route-id="@m.CategoryId" class="text text-primary">
                                                            @m.CategoryName
                                                        </a>
                                                    </td>
                                                    @*<td>
                                                            <a asp-action="GetByTypeId" asp-controller="Stock" asp-route-id="@m.TypeId" class="text text-primary">
                                                                @m.TypeName
                                                            </a>
                                                        </td>
                                                        <td>@m.Model</td>
                                                        <td>@m.UnitName</td>*@
                                                    @*<td>@m.TotalInQty.ToString("N")</td>
                                                        <td>@m.TotalOutQty.ToString("N")</td>*@
                                                    <td style="background-color: lightgray;">@m.CurrentStockQty.ToString("N")</td>
                                                    @*<td>@m.StockPurchasedPrice.ToString("N")</td>
                                                        <td>@m.StockSalesPrice.ToString("N")</td>*@
                                                    <td>
                                                        <a asp-action="StockDetails" asp-controller="Stock" asp-route-id="@m.ProductId"
                                                           class="btn btn-info btn-mini">
                                                            <i class="fa fa-eye"></i> Details
                                                        </a>

                                                        @*<span class="d-none">
                                                                @{
                                                                    purchasePriceTotal += m.StockPurchasedPrice;
                                                                    salePriceTotla += m.StockSalesPrice;
                                                                }
                                                            </span>*@
                                                    </td>
                                                </tr>
                                            }

                                        }
                                    </tbody>
                                    @*<tfoot>
                                            <tr style="background-color: lightgray;">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td class="text text-right font-weight-bold">Total</td>
                                                <td>@purchasePriceTotal.ToString("N")</td>
                                                <td>@salePriceTotla.ToString("N")</td>
                                                <td></td>
                                            </tr>
                                        </tfoot>*@
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<!-- Main-body end -->