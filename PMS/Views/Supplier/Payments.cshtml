@model IEnumerable<SupplierPayment>
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Supplier Payments"];
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Suppliers Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="CreatePayment" asp-controller="Supplier"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-plus"></i> @localizer["Add New Payment"]
                                </a>

                                <a asp-action="Index" asp-controller="Supplier"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Suppliers List"]
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <div class="page-header card">
                    <div class="card-block">
                        <form method="get" asp-action="Payments_by_Supplier">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["Supplier"]</label>
                                        <select class="select2 form-control" name="supplierId" asp-items="@ViewBag.Suppliers" style="width: 100%;">
                                            <option selected="selected" value="0">@localizer["Select Supplier"]</option>
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["From"]</label>
                                        <input type="date" name="startDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">@localizer["To"]</label>
                                        <input type="date" name="endDate" class="form-control" id="inlineFormInputName">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-12" style="padding-top: 20px;">
                                    <div class="form-group pt-2">
                                        <button type="submit" class="btn btn-primary mr-2"><i class="fa fa-search"></i>@localizer["Search"] </button>
                                        <a asp-action="Payments" asp-controller="Supplier"
                                           class="btn btn-info mr-2 text text-white"><i class="fa fa-list"></i> @localizer["Show All"]</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>@localizer["Suppliers Payments Details"]</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["SNo"].</th>
                                            <th>@localizer["Supplier Name"]</th>
                                            <th>@localizer["Payment Date"]</th>
                                            <th>@localizer["Payment Amount"]</th>
                                            <th>@localizer["Description"]</th>
                                            <th>@localizer["Actions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var sno = 1; }
                                        @if (Model.Any())
                                        {
                                            foreach (var m in Model)
                                            {
                                                <tr>
                                                    <td>@sno @{sno++;} </td>
                                                    <td>@m.SupplierName</td>
                                                    <td>@m.Date</td>

                                                    <td>@m.Amount.ToString("N")</td>
                                                    <td>@m.Desciption</td>
                                                    <td>
                                                        <a asp-action="EditPayment" asp-controller="Supplier" asp-route-id="@m.Id"
                                                           class="text text-primary mr-3">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Basic table card end -->
                </div>
                <!-- Page-body end -->

                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main-body end -->