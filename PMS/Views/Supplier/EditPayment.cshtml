@model SupplierPayment
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Supplier Payments"];
}
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-ms-12" style="margin:0 auto;">
                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">@localizer["Suppliers Administration"]</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Index" asp-controller="Supplier"
                                   class="btn btn-mat btn-primary" style="color: white;">
                                    <i class="fa fa-list"></i>  @localizer["Suppliers List"]
                                </a>
                                <a asp-action="GetAllLedgers" asp-controller="Supplier"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> @localizer["Suppliers Ledger"]
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>@localizer["Edit supplier payment details"]</h5>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>

                                    <div class="card-header-right">
                                        <i class="icofont icofont-spinner-alt-5"></i>
                                    </div>
                                    <hr />
                                </div>
                                <div class="card-block">
                                    <div class="col-sm-12 text text-center">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="col-lg-8 col-md-10 col-sm-12" style="margin: 0 auto;">
                                        <form method="post" asp-controller="Supplier">
                                            <div class="row">
                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">@localizer["Supplier"] <span class="required">*</span></label>
                                                        <select class="select2 form-control" style="width: 100%;" asp-for="SupplierId" asp-items="@ViewBag.Suppliers">
                                                            <option selected="selected" value="0">@localizer["Select Supplier"]</option>
                                                        </select>
                                                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12 d-none">
                                                    <div class="form-group">
                                                        <label class="control-label">@localizer["Payment Type"] <span class="required">*</span></label>
                                                        <select class="form-control select2" style="width: 100%;" asp-for="PaymentType" id="invtype">
                                                            <option selected="selected" value="0">@localizer["Through Cash"]</option>
                                                            <option value="1">@localizer["Through Bank"]</option>
                                                        </select>
                                                        <span asp-validation-for="PaymentType" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12" id="bankid">
                                                    <div class="form-group">
                                                        <label class="control-label">@localizer["Bank"] <span class="required">*</span></label>
                                                        <select class="form-control select2" style="width: 100%;" asp-for="BankId" asp-items="@ViewBag.Banks">
                                                            <option selected="selected" value="0">@localizer["Select Bank"]</option>
                                                        </select>
                                                        <span asp-validation-for="BankId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @localizer["Payment Amount"] <span class="required">*</span>
                                                        </label>
                                                        <input type="number" step="any" asp-for="Amount" class="form-control" required />
                                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label"> @localizer["Payment Date"] <span class="required">*</span> </label>
                                                        <input type="date" asp-for="Date" class="form-control" />
                                                        <span asp-validation-for="Date" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-lg-6 col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label class="control-label">@localizer["Description"]</label>
                                                        <textarea asp-for="Desciption" class="form-control"> </textarea>
                                                        <span asp-validation-for="Desciption" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-12 text text-left">
                                                    <input type="hidden" asp-for="TransCode" />
                                                    <input type="hidden" asp-for="CreatedAt" />
                                                    <button type="submit" class="btn btn-mat btn-success mr-2">
                                                        <i class="fa fa-save"></i> @localizer["Update"]
                                                    </button>

                                                    <button type="reset" class="btn btn-mat btn-danger">
                                                        <i class="fa fa-times"></i> @localizer["Cancel"]
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
                <div class="page-header card">
                    <div class="card-block">
                        <ul class="">
                            <li class="breadcrumb-item pull-left">
                                <a onclick="window.history.back();;"
                                   class="text text-danger font-weight-bold" style="cursor: pointer;">
                                    <i class="fa fa-arrow-left"></i> @localizer["Back"]
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>