@model PartnerDetailsViewModel

@{
    ViewData["Title"] = "Partners Details";
    var partnerDetails = Model.PartnerDetails;
    var partnerLedgers = Model.PartnerLedgerDetails;
    var partnerInvestmentDetails = Model.ProductInvestmentDetails;
    var partnerPaymentDetails = Model.PartnerPaymentDetails;
}

<!-- Main-body start -->
<div class="main-body">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12" style="margin:0 auto;">
                <!-- Page-header start-->

                <div class="page-header card">
                    <div class="card-block">
                        <h5 class="m-b-10">Partners Administration</h5>
                        <ul class="breadcrumb-title b-t-default p-t-10">
                            <li class="breadcrumb-item pull-right">
                                <a asp-action="Create" asp-controller="Partner"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-user-plus"></i> Add New Partner
                                </a>

                                <a asp-action="Index" asp-controller="Partner"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Partners List
                                </a>

                                <a asp-action="GetAllLedgers" asp-controller="Partner"
                                   class="btn btn-mat btn-info" style="color: white;">
                                    <i class="fa fa-list"></i> Partner Ledger
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="card">

                        <div class="card-header">
                            <h5>Partner Details</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    <li><i class="fa fa-times close-card"></i></li>
                                </ul>
                            </div>
                        </div>

                        <div class="container">
                            <div class="box-body">

                                <div class="page-header card">
                                    <div class="card-block">

                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">Partner Details</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>Name</h6>
                                                <p>@partnerDetails.Name</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>Phone</h6>
                                                <p>@partnerDetails.Phone</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>Email</h6>
                                                <p>@partnerDetails.Email</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-6 col-md-4 col-sm-6">
                                                <h6>Address</h6>
                                                <p>@partnerDetails.Address</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-6 col-md-4 col-sm-6">
                                                <h6>Details</h6>
                                                <p>@partnerDetails.Details</p>
                                                <hr />
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>Created At</h6>
                                                <p>@partnerDetails.CreatedAt</p>
                                                <hr />
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>Last Updated At</h6>
                                                <p>@partnerDetails.UpdatedAt</p>
                                                <hr />
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-6">
                                                <h6>Registered By User</h6>
                                                <p>@partnerDetails.UserName</p>
                                                <hr />
                                            </div>
                                        </div>

                                    </div>
                                </div>


                                <div class="page-header card">
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">Partner Ledger Details</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>SNo</th>
                                                                    <th>Date</th>
                                                                    <th>Description</th>
                                                                    <th>Debit</th>
                                                                    <th>Credit</th>
                                                                    <th>
                                                                        Balance <br />
                                                                        <small>(Not Include Profit/Loss)</small>
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{
                                                                    var sno1 = 1;
                                                                    decimal totalDebit = 0;
                                                                    decimal totalCredit = 0;
                                                                    decimal totalBalance = 0;
                                                                }
                                                                @if (partnerLedgers.Any())
                                                                {
                                                                    @foreach (var m in partnerLedgers)
                                                                    {
                                                                        <tr>
                                                                            <td>@sno1 @{sno1++;}</td>
                                                                            <td>@m.Date</td>
                                                                            <td>@m.Description</td>
                                                                            <td>@m.Debit.ToString("N")</td>
                                                                            <td>@m.Credit.ToString("N")</td>
                                                                            <td>
                                                                                @m.Balance.ToString("N")
                                                                                <span class="d-none">
                                                                                    @{
                                                                                        totalDebit += m.Debit;
                                                                                        totalCredit += m.Credit;
                                                                                    }
                                                                                </span>
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                            <tfoot>
                                                                <tr style="background-color: lightgray;">
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td>Total</td>
                                                                    <td>@totalDebit.ToString("N")</td>
                                                                    <td>@totalCredit.ToString("N")</td>
                                                                    <td>
                                                                        <span class="d-none">
                                                                            @{
                                                                                totalBalance = totalDebit - totalCredit;
                                                                            }
                                                                        </span>

                                                                        @totalBalance.ToString("N")
                                                                    </td>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="page-header card">
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">Partners Payment Details</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>SNo</th>
                                                                    <th>Payment Date</th>
                                                                    <th>Payment Amount</th>
                                                                    <th>Description</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{
                                                                    var sno2 = 1;
                                                                    decimal totalPayment = 0;
                                                                }
                                                                @if (partnerPaymentDetails.Any())
                                                                {
                                                                    @foreach (var m in partnerPaymentDetails)
                                                                    {
                                                                        <tr>
                                                                            <td>@sno2 @{sno2++;} </td>
                                                                            <td>@m.Date</td>
                                                                            <td>@m.Amount.ToString("N")</td>
                                                                            <td>
                                                                                @m.Desciption
                                                                                @{
                                                                                    totalPayment += m.Amount;
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                            <tfoot>
                                                                <tr style="background-color: lightgray;">
                                                                    <td></td>
                                                                    <td>Total</td>
                                                                    <td>@totalPayment.ToString("N")</td>
                                                                    <td></td>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="page-header card">
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <h5 class="text text-primary">Partner Investment Details</h5>
                                                <hr />
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div class="card-block table-border-style">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>SNo</th>
                                                                    <th>Investment Date</th>
                                                                    <th>Investment Amount</th>
                                                                    <th>Description</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{
                                                                    var sno = 1;
                                                                    decimal totalInvestment = 0;
                                                                }
                                                                @if (partnerInvestmentDetails.Any())
                                                                {
                                                                    @foreach (var m in partnerInvestmentDetails)
                                                                    {
                                                                        <tr>
                                                                            <td>@sno @{sno++;} </td>
                                                                            <td>@m.InvestmentDate</td>
                                                                            <td>@m.Amount.ToString("N")</td>
                                                                            <td>
                                                                                @m.Desciption
                                                                                @{
                                                                                    totalInvestment += m.Amount;
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                            <tfoot>
                                                                <tr style="background-color: lightgray;">
                                                                    <td></td>
                                                                    <td>Total</td>
                                                                    <td>@totalInvestment.ToString("N")</td>
                                                                    <td></td>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        @*Basic table card end*@
                    </div>
                    @*Page-body end*@

                    <div class="page-header card">
                        <div class="card-block">
                            <ul class="">
                                <li class="breadcrumb-item pull-left">
                                    <a onclick="window.history.back();"
                                       class="text text-danger font-weight-bold" style="cursor: pointer;">
                                        <i class="fa fa-arrow-left"></i> Back
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>